#: import get_color_from_hex kivy.utils.get_color_from_hex

<ChoiceAccount>:
    name: 'ChoiceAccount'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:

        MDLabel:
            text: 'Criar uma conta para '
            font_style: 'Headline'
            role: 'small'
            bold: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.89}
            halign: 'center'

        MDLabel:
            text: 'Selecione o tipo de conta que você deseja criar'
            font_style: 'Title'
            role: 'small'
            theme_text_color: 'Custom'
            text_color: 'grey'
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
            halign: 'center'

        MDBoxLayout:
            orientation: 'horizontal'
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            size_hint: 0.9, 0.35
            spacing: 5
            padding: [5,]
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}

            MDCard:
                size_hint: 1, 1
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                theme_line_color: 'Custom'
                line_color: get_color_from_hex('#00b894')
                on_release: root.contratante()

                MDRelativeLayout:
                    AsyncImage:
                        source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1742645722/contractor-icon-improved_boeh4z.png'
                        size_hint: 0.5, 0.5
                        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

                    MDLabel:
                        text: 'Contratante'
                        bold: True
                        font_style: 'Title'
                        role: 'medium'
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDLabel:
                        text: 'Para empresas ou pessoas que precisam contratar serviços'
                        font_style: 'Label'
                        role: 'medium'
                        size_hint_x: 0.9
                        theme_text_color: 'Custom'
                        text_color: 'black'
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

            MDCard:
                size_hint: 1, 1
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                theme_line_color: 'Custom'
                line_color: get_color_from_hex('#00b894')
                on_release: root.funcionario()
                MDRelativeLayout:
                    AsyncImage:
                        source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1742645731/employee-icon-improved_g5vdij.png'
                        size_hint: 0.5, 0.5
                        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

                    MDLabel:
                        text: 'Funcionário'
                        bold: True
                        font_style: 'Title'
                        role: 'medium'
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDLabel:
                        text: 'Para profissionais que buscam oportunidade de trabalho'
                        font_style: 'Label'
                        role: 'medium'
                        size_hint_x: 0.9
                        theme_text_color: 'Custom'
                        text_color: 'black'
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

        MDBoxLayout:
            size_hint: 0.9, 0.07
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}

            MDCard:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                theme_line_color: 'Custom'
                line_color: get_color_from_hex('#00b894')
                size_hint: 1, 1
                on_release: root.voltar()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Tela anterior'
                        theme_text_color: 'Custom'
                        text_color: get_color_from_hex('#00b894')
                        bold: True
                        halign: 'center'
                        pos_hint: {'center_x': 0.53 ,'center_y': 0.5}

                    MDIcon:
                        icon: 'arrow-left-thin'
                        theme_icon_color: 'Custom'
                        icon_color: get_color_from_hex('#00b894')
                        pos_hint: {'center_x': 0.3 ,'center_y': 0.5}