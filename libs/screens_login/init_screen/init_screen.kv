#: import get_color_from_hex kivy.utils.get_color_from_hex

<InitScreen>:
    name: 'Init'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDLabel:
            text: 'Quem est√° fazendo login?'
            font_style: 'Headline'
            role: 'small'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}

        AsyncImage:
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1736624400/freepik__upload__21102_uiwizh.jpg'
            size_hint: 0.6, 0.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}


        MDBoxLayout:
            size_hint: 0.8, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {"center_y": 0.48, "center_x": 0.5}
            size_hint: 0.8, 0.1
            theme_bg_color: "Custom"
            md_bg_color: "white"
            md_bg_color_disabled: "white"

            MDRelativeLayout:
                MDTextField:
                    id: nome
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    line_color_focus: get_color_from_hex('#00b894')
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    pos_hint: {"center_y": 0.65, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "account"
                    mode: "outlined"
                    radius: 15, 15, 15, 15

                    MDTextFieldLeadingIcon:
                        icon: "account-circle"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: get_color_from_hex('#00b894')

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: 'grey'
                        text: 'Nome'
                MDLabel:
                    id: nome_errado
                    text: ''
                    theme_text_color: 'Custom'
                    font_style: 'Title'
                    role: 'small'
                    text_color: 'red'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                    halign: 'right'

        MDBoxLayout:
            size_hint: 0.8, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {"center_y": 0.37, "center_x": 0.5}
            theme_bg_color: "Custom"
            md_bg_color: "white"
            md_bg_color_disabled: "white"

            MDRelativeLayout:
                MDTextField:
                    id: senha
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    line_color_focus: get_color_from_hex('#00b894')
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    pos_hint: {"center_y": 0.65, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "account"
                    mode: "outlined"
                    radius: 15, 15, 15, 15

                    MDTextFieldLeadingIcon:
                        icon: "lock"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: get_color_from_hex('#00b894')

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: get_color_from_hex('#00b894')
                        text: 'Senha'

                MDLabel:
                    id: senha_errada
                    text: ''
                    theme_text_color: 'Custom'
                    font_style: 'Title'
                    role: 'small'
                    text_color: 'red'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                    halign: 'right'

        MDBoxLayout:
            size_hint: 0.9, 0.05
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}

            MDRelativeLayout:

                MDCheckbox:
                    on_active: root.on_checkbox_active(*args)
                    pos_hint: {'center_x': 0.1, 'center_y': 0.5}

                MDLabel:
                    id: type
                    text: 'Selecione o tipo de conta'
                    size_hint_x: .9
                    halign: 'left'
                    pos_hint: {'center_x': 0.6, 'center_y': 0.5}

        MDBoxLayout:
            size_hint: 0.8, 0.07
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.24}

            MDCard:
                theme_bg_color: 'Custom'
                md_bg_color: get_color_from_hex('#00b894')
                theme_line_color: 'Custom'
                line_color: get_color_from_hex('#00b894')
                size_hint: 1, 1
                on_release: root.etapa1()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Fazer Login'
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        bold: True
                        halign: 'center'
                        pos_hint: {'center_x': 0.53 ,'center_y': 0.48}

                    MDIcon:
                        icon: 'account'
                        theme_icon_color: 'Custom'
                        icon_color: 'white'
                        pos_hint: {'center_x': 0.3 ,'center_y': 0.5}

        MDBoxLayout:
            size_hint: 0.8, 0.07
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}

            MDCard:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                theme_line_color: 'Custom'
                line_color: get_color_from_hex('#00b894')
                size_hint: 1, 1
                on_release: root.register()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Criar uma conta'
                        theme_text_color: 'Custom'
                        text_color: get_color_from_hex('#00b894')
                        bold: True
                        halign: 'center'
                        pos_hint: {'center_x': 0.53 ,'center_y': 0.5}

