#: import NavigationsButtons libs.components.navigation_buttons.NavigationsButtons
<OutrosPage>:
    name: 'outros'
    md_bg_color: 1, 1, 1, 1

    MDBoxLayout:
        orientation: 'vertical'

        Name:
            name: root.username

        MDBoxLayout:
            id: timeline
            orientation: 'vertical'
            adaptive_height: 'True'

            MDBoxLayout:
                adaptive_height: 'True'
                spacing: 5
                pading: 5

                FitImage:
                    size_hint: None, None
                    size: 80, 80
                    radius: [50,]
                    padding: 40
                    halign: 'left'
                    source: root.avatar

                Publicar:
                    publicar: '0'

                Seguidores:
                    id: seguir
                    seguidores: '200'

                Seguindo:
                    id: seguido
                    seguindo: '0'

        MDBoxLayout:
            adaptive_height: True
            Bio:
                id: bio
                bio: 'VocÃª deve ao mundo os seus dons so precisa aprender a usa-los'


        MDBoxLayout:
            adaptive_height: True
            spacing: 20
            MDButton:
                id: bot
                on_release: root.alterar()
                theme_bg_color: 'Custom'
                md_bg_color: [0, 149/255, 246/255, 1]

                MDButtonText:
                    id: bot_seguir
                    text: 'Seguir o usuario'
                    bold: True
                    theme_text_color: 'Custom'
                    text_color: 'white'

            MDButton:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 0.8
                MDButtonText:
                    text: 'Enviar mensagem'
                    bold: True
                    theme_text_color: 'Custom'
                    text_color: 'black'

            MDIconButton:
                icon: "dots-vertical"

        MDLabel:
            text: ''


    NavigationsButtons:
        avatar: root.my_avatar()