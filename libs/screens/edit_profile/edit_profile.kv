<EditProfile>:
    name: 'EditProfile'
    md_bg_color: 'white'

    FloatLayout:

        MDCard:
            size_hint: 1, 0.1
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}
            md_bg_color: 0, 0, 0, 0

            MDRelativeLayout:
                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: '37dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}
                    on_release: root.login()

                MDLabel:
                    text: 'Editar Perfil'
                    font_style: 'Headline'
                    role: 'medium'
                    bold: True
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}


        FitImage:
            id: perfil
            size_hint: 0.35, 0.17
            radius: [60,]
            pos_hint: {"center_x": 0.5, 'center_y': 0.82}
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1736695288/kcllakfju7d5sqmf9xeg.jpg'

        MDButton:
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            theme_line_color: 'Custom'
            line_color: 1, 1, 1, 1
            pos_hint: {"center_x": 0.5, 'center_y': 0.69}
            on_release: root.open_gallery()
            id: botton_perfil

            MDButtonText:
                id: image_perfil
                text: 'Editar foto de perfil'
                theme_text_color: 'Custom'
                text_color: 'blue'
                font_style: 'Title'
                role: 'medium'

        MDCard:
            size_hint: 0.8, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}

            MDRelativeLayout:
                MDTextField:
                    id: telefone
                    size_hint: 1, 0.9
                    pos_hint: {'center_x': 0.44, 'center_y': 0.7}
                    theme_text_color: 'Custom'
                    text_color_normal: 'black'
                    radius: [15,]
                    on_text: root.on_text_two(self, self.text)

                    MDTextFieldHintText:
                        text: 'Numero de Telefone'

                MDIconButton:
                    id: correct1
                    icon: ''
                    theme_font_size: 'Custom'
                    font_size: '30dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 1.04, 'center_y': 0.65}
                    on_release: root.page_functions()

                MDLabel:
                    id: erro1
                    text: ''
                    halign: 'right'
                    theme_text_color: 'Custom'
                    text_color: 'red'
                    font_style: 'Title'
                    role: 'small'
                    pos_hint: {'center_x': 0.44, 'center_y': 0.1}

        MDCard:
