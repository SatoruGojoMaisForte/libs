#: import get_color_from_hex kivy.utils.get_color_from_hex

<EditProfile>:
    name: 'EditProfile'
    md_bg_color: 1, 1, 1, 1

    MDFloatLayout:
        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'top': 1}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: '37dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}
                    on_release: root.login()

                MDLabel:
                    text: 'Meu Perfil'
                    font_style: 'Headline'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    role: 'medium'
                    bold: False
                    pos_hint: {'center_x': 0.2}
                    halign: 'center'

        # Seção superior - Imagem e informações básicas
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.35
            padding: "10dp"
            spacing: "10dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.83}

            # Container da imagem - Fixo e centralizado
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.6
                padding: "10dp"

                MDBoxLayout:
                    size_hint: None, None
                    size: "130dp", "130dp"
                    pos_hint: {'center_x': 0.5}

                    MDRelativeLayout:

                        AsyncImage:
                            id: perfil
                            source: root.avatar
                            allow_stretch: True
                            keep_ratio: True
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                        MDIconButton:
                            icon: 'camera-plus'
                            theme_font_size: 'Custom'
                            theme_icon_color: 'Custom'
                            icon_color: 'white'
                            on_release: root.open_gallery()
                            font_size: '27dp'
                            theme_bg_color: 'Custom'
                            md_bg_color: get_color_from_hex('#00b894')
                            pos_hint: {'center_x': 0.76, 'center_y': 0.15}

        MDBoxLayout:
            orientation: 'vertical'
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1 ,1 ,1
            size_hint: 0.8, 0.4
            spacing: 5
            pos_hint: {'center_x': 0.5, 'center_y': 0.43}

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1

                MDRelativeLayout:

                    MDLabel:
                        text: 'Nome completo'
                        halign: 'left'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.8}

                    MDTextField:
                        id: name_user
                        mode: "outlined"
                        theme_bg_color: 'Custom'
                        fill_color_normal: 1, 1, 1, 1
                        theme_line_color: "Custom"
                        line_color_normal: get_color_from_hex('#C4CAD0')
                        line_color_focus: 'cyan'
                        radius: [15,]
                        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

                        MDTextFieldHintText:
                            text: 'Digite o seu nome completo'

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1

                MDRelativeLayout:
                    MDLabel:
                        text: 'Email'
                        halign: 'left'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.8}

                    MDTextField:
                        id: email
                        mode: "outlined"
                        theme_bg_color: 'Custom'
                        fill_color_normal: 1, 1, 1, 1
                        theme_line_color: "Custom"
                        line_color_normal: get_color_from_hex('#C4CAD0')
                        line_color_focus: 'cyan'
                        radius: [15,]
                        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

                        MDTextFieldHintText:
                            text: 'Digite o seu email'


            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1

                MDRelativeLayout:
                    MDLabel:
                        text: 'Número de Telefone'
                        halign: 'left'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.8}

                    MDTextField:
                        id: telefone
                        mode: "outlined"
                        theme_bg_color: 'Custom'
                        fill_color_normal: 1, 1, 1, 1
                        theme_line_color: "Custom"
                        line_color_normal: get_color_from_hex('#C4CAD0')
                        line_color_focus: 'cyan'
                        radius: [15,]
                        on_text: root.on_text_two(self, self.text)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

                        MDTextFieldHintText:
                            text: 'Digite o seu número de telefone'


        MDBoxLayout:
            orientation: 'vertical'
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            size_hint: 0.8, 0.17
            spacing: 10
            pos_hint: {'center_x': 0.5, 'center_y': 0.12}

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1

                MDCard:
                    theme_bg_color: 'Custom'
                    md_bg_color: get_color_from_hex('#00b894')
                    size_hint: 1, 1
                    on_release: root.step_one()

                    MDRelativeLayout:
                        MDLabel:
                            text: 'Editar Perfil'
                            theme_text_color: 'Custom'
                            text_color: 'white'
                            bold: True
                            halign: 'center'
                            pos_hint: {'center_x': 0.53 ,'center_y': 0.5}

                        MDIcon:
                            icon: 'border-color'
                            theme_icon_color: 'Custom'
                            icon_color: 'white'
                            pos_hint: {'center_x': 0.3 ,'center_y': 0.5}

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1

                MDCard:
                    theme_bg_color: 'Custom'
                    md_bg_color: 1, 1, 1, 1
                    theme_line_color: 'Custom'
                    line_color: get_color_from_hex('#00b894')
                    size_hint: 1, 1
                    on_release: root.next_page()

                    MDRelativeLayout:
                        MDLabel:
                            text: 'Proxima etapa'
                            theme_text_color: 'Custom'
                            text_color: get_color_from_hex('#00b894')
                            bold: True
                            halign: 'center'
                            pos_hint: {'center_x': 0.53 ,'center_y': 0.5}

                        MDIcon:
                            icon: 'arrow-right-thin'
                            theme_icon_color: 'Custom'
                            icon_color: get_color_from_hex('#00b894')
                            pos_hint: {'center_x': 0.3 ,'center_y': 0.5}