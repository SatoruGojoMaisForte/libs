<WorkingDays>:
    name: 'WorkingDays'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:

        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: '34dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}
                    on_release: root.back_evaluation()

                MDLabel:
                    text: 'Trabalho semanal'
                    font_style: 'Title'
                    role: 'large'
                    bold: True
                    halign: 'center'
                    pos_hint: {'center_x': 0.5}


                MDIconButton:
                    icon: 'check-all'
                    theme_font_size: 'Custom'
                    font_size: '34dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}

        MDDivider:
            orientation: 'horizontal'
            size_hint_x: 1
            color: 'black'
            pos_hint: {'center_x': 0.5, 'center_y': 0.87}

        MDBoxLayout:
            orientation: 'horizontal'
            theme_bg_color: 'Custom'
            md_bg_color: 'white'
            size_hint: 0.85, 0.05
            pos_hint: {'center_x': 0.5, 'center_y': .82}

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 'white'
                spacing: 5
                padding: [20, 0, 0, 0]

                MDLabel:
                    text: 'Dias da semana'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 'white'
                spacing: 5
                padding: [40, 0, 0, 0]

                MDLabel:
                    text: 'Trabalhou?'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    font_style: 'Title'
                    role: 'medium'
                    bold: True

        MDScrollView:
            do_scroll_x: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}
            size_hint: 0.98, 0.4

            MDBoxLayout:
                id: main_scroll
                orientation: "vertical"
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1

        MDDivider:
            orientation: 'horizontal'
            size_hint_x: 1
            color: 'black'
            pos_hint: {'center_x': 0.5, 'center_y': 0.37}

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 'white'
            pos_hint: {'center_x': 0.45, 'center_y': 0.32}
            padding: [40, 0, 40, 0]

            MDBoxLayout:
                size_hint: 0.2, 1
                theme_bg_color: 'Custom'
                md_bg_color: 'white'
                spacing: 5
                padding: [20, 0, 0, 0]

                MDIconButton:
                    icon: 'circle'
                    theme_font_size: 'Custom'
                    font_size: '40'
                    theme_icon_color: 'Custom'
                    icon_color: 'red'
                    pos_hint: {'center_y': 0.5}

                MDLabel:
                    text: 'Faltas'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True


            MDBoxLayout:
                size_hint: 0.2, 1
                theme_bg_color: 'Custom'
                md_bg_color: 'white'
                spacing: 5
                padding: [20, 0, 0, 0]

                MDIconButton:
                    icon: 'circle'
                    theme_font_size: 'Custom'
                    font_size: '40'
                    theme_icon_color: 'Custom'
                    icon_color: 0.0, 1.0, 0.0, 1.0
                    pos_hint: {'center_y': 0.5}

                MDLabel:
                    text: 'Presença'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True

        MDBoxLayout:
            id: graphic
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            theme_bg_color: 'Custom'
            md_bg_color: 'white'
            size_hint: 0.8, 0.3  # Ajuste o tamanho da caixa onde a pizza vai ser colocada
            padding: [10, 20, 20, 20]

            PizzaWidget:
                dias_trabalhados: 15
                dias_falta: 5
                size_hint: None, None  # Desativa o ajuste de tamanho automático
                size: 200, 200  # Tamanho fixo para a pizza
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Centraliza a pizza dentro do layout
                halign: 'center'
                valign: 'center'

