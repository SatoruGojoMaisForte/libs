#:import get_color_from_hex kivy.utils.get_color_from_hex

<FirstWeek>:
    name: 'FirstWeek'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 0, 0, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]
                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: '37dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}
                    on_release: root.back_working_month()

                MDLabel:
                    text: 'Primeira semana'
                    font_style: 'Headline'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    role: 'medium'
                    bold: True
                    pos_hint: {'center_x': 0.2}
                    halign: 'center'

        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
            padding: [10, 10, 0, 0]

            MDLabel:
                text: 'Funcion√°rio'
                theme_text_color: 'Custom'
                text_color: 'black'

            MDBoxLayout:
                orientation: 'horizontal'

                MDLabel:
                    text: root.employee_name
                    padding: [10, 0, 0, 0]

                MDIconButton:
                    icon: 'arrow-left-drop-circle'
                    theme_icon_color: 'Custom'
                    icon_color: get_color_from_hex('#3F88C5')

        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            padding: [10, 10, 0, 0]
            spacing: dp(5)

            MDLabel:
                text: 'Semana'
                theme_text_color: 'Custom'
                text_color: 'black'

            MDBoxLayout:
                orientation: 'horizontal'

                MDIconButton:
                    icon: 'arrow-left-drop-circle'
                    theme_icon_color: 'Custom'
                    icon_color: get_color_from_hex('#3F88C5')

                MDLabel:
                    id: week
                    padding: [10, 0, 0, 8]

                MDIconButton:
                    icon: 'arrow-right-drop-circle'
                    theme_icon_color: 'Custom'
                    icon_color: get_color_from_hex('#3F88C5')


        ScrollView:
            do_scroll_x: False
            size_hint_y: 0.4
            pos_hint: {'center_x': 0.5 ,'center_y': 0.47}

            MDBoxLayout:
                id: main_scroll
                orientation: "vertical"
                spacing: dp(5)
                padding: [dp(0), dp(5), dp(0), dp(5)]
                size_hint_y: None
                height: self.minimum_height
                md_bg_color: 1, 1, 1, 1

        MDBoxLayout:
            pos_hint: {'center_x': 0.5, 'center_y': 0.17}
            size_hint: 1, 0.1
            theme_bg_color: 'Custom'
            radius: [10,]
            md_bg_color: get_color_from_hex('#F9DC5C')

            padding: [10, 0, 0, 0]

            MDLabel:
                id: label
                text: f'Total de {root.days_work} dias presentes, {root.faults} dias ausentes '
                theme_text_color: 'Custom'
                text_color: 'black'
                font_style: 'Label'
                role: 'large'

        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}
            size_hint: 1, 0.1
            theme_bg_color: 'Custom'
            radius: [10,]
            spacing: dp(5)
            md_bg_color: 'white'
            padding: [10, 0, 10, 0]

            MDCard:
                style: 'elevated'
                size_hint: 0.5, 0.8
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1

                MDRelativeLayout:
                    MDLabel:
                        text: 'Cancelar'
                        bold: True
                        theme_text_color: 'Custom'
                        text_color: 'black'
                        halign: 'center'
            MDCard:
                style: 'elevated'
                size_hint: 0.5, 0.8
                theme_bg_color: 'Custom'
                md_bg_color: 0, 0, 1, 1
                on_release: root.database_step_one()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Salvar'
                        bold: True
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        halign: 'center'
