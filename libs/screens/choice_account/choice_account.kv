<ChoiceAccount>:
    name: 'ChoiceAccount'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDIconButton:
            on_release: root.voltar()
            icon: 'arrow-left'
            theme_font_size: 'Custom'
            font_size: '40dp'
            theme_icon_color: 'Custom'
            icon_color: "black"
            pos_hint: {'center_y': 0.95, 'center_x': 0.1}

        MDLabel:
            text: 'Criar uma conta para '
            font_style: 'Headline'
            role: 'large'
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
            halign: 'center'

        MDCard:
            style: 'elevated'
            size_hint: 0.46, 0.29
            pos_hint: {'center_y': 0.65, 'center_x': 0.26}
            theme_shadow_color: "Custom"
            shadow_color: 'black'
            theme_bg_color: "Custom"
            md_bg_color: [0.0, 1.0, 0.0, 1.0]
            md_bg_color_disabled: "yellow"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.contratante()

            MDRelativeLayout:
                AsyncImage:
                    source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1732830920/boss_white_outline_xbsvta.png'
                    size_hint: 0.9, 0.85
                    pos_hint: {'center_x': 0.5, 'center_y': 0.58}

                MDLabel:
                    text: 'Contratante'
                    font_style: 'Headline'
                    role: 'medium'
                    halign: 'center'
                    bold: True
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.07}

        MDCard:
            style: 'elevated'
            size_hint: 0.48, 0.29
            pos_hint: {'center_y': 0.65, 'center_x': 0.75}
            theme_shadow_color: "Custom"
            shadow_color: "black"
            theme_bg_color: "Custom"
            md_bg_color: "blue"
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.funcionario()

            MDRelativeLayout:
                AsyncImage:
                    source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1732830186/funcionario_white_outline_b8nrwk.png'
                    size_hint: 0.9, 0.85
                    pos_hint: {'center_x': 0.5, 'center_y': 0.58}

                MDLabel:
                    text: 'Funcionarios'
                    font_style: 'Headline'
                    role: 'medium'
                    bold: True
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.07}
                    


