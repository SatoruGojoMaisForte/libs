#: import get_color_from_hex kivy.utils.get_color_from_hex

<EmployeeAvatar>:
    name: 'EmployeeAvatar'
    md_bg_color: get_color_from_hex('#2563EB')

    FloatLayout:
        id: principal

        MDCard:
            size_hint: 0.8, 0.64
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            border: [0,]
            theme_bg_color: 'Custom'
            md_bg_color: (255, 255, 255, 0.2)

            MDRelativeLayout:

                MDIconButton:
                    icon: 'arrow-left'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    theme_bg_color: 'Custom'

                    pos_hint: {'center_x': 0.12, 'center_y': 0.92}

                MDLabel:
                    text: 'Finalizar Cadastro'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    font_style: 'Title'
                    role: 'large'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.91}
                    halign: 'center'
                    bold: True

                MDDivider:
                    size_hint_x: 0.75
                    color: 'white'
                    divider_width: '2dp'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.86}


                AsyncImage:
                    id: perfil
                    source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1726685784/a8da222be70a71e7858bf752065d5cc3-fotor-20240918154039_dokawo.png'
                    size_hint: 0.4, 0.4
                    pos_hint: {'center_x': 0.5, 'center_y': 0.67}

                MDIconButton:
                    icon: 'camera'
                    theme_icon_color: 'Custom'
                    icon_color: 1, 1, 1, 1
                    theme_bg_color: 'Custom'
                    md_bg_color: 0, 0, 1, 1
                    pos_hint: {'center_x': 0.63, 'center_y': 0.58}

                MDLabel:
                    id: name
                    text: root.employee_name
                    font_style: 'Title'
                    role: 'medium'
                    bold: True
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.48}

                MDButton:
                    theme_bg_color: 'Custom'
                    md_bg_color: get_color_from_hex('#2081C3')
                    pos_hint: {'center_x': 0.5, 'center_y': 0.41}
                    theme_height: 'Custom'
                    theme_width: 'Custom'
                    size_hint: 0.35, 0.08

                    MDButtonText:
                        id: scale
                        text: f'Escala: {root.scale}'
                        halign: 'center'
                        theme_text_color: 'Custom'
                        pos_hint: {'center_x': 0.5 ,'center_y': 0.5}
                        text_color: 'white'

                MDLabel:
                    id: text
                    text: f'Trabalha de {root.function} ganhando R${root.salary} ({root.method_salary})'
                    font_style: 'Label'
                    role: 'medium'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    size_hint_x: None  # Permite definir um width fixo
                    width: dp(250)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                    halign: 'center'

                MDCard:
                    size_hint: 0.9, 0.1
                    theme_bg_color: 'Custom'
                    md_bg_color: 1, 1, 1, 1
                    pos_hint: {'center_x': 0.5, 'center_y': 0.19}
                    on_release: root.open_gallery()

                    MDLabel:
                        text: 'Adicionar imagem'
                        theme_text_color: 'Custom'
                        text_color: get_color_from_hex('#2563EB')
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}


                MDCard:
                    size_hint: 0.9, 0.1
                    theme_bg_color: 'Custom'
                    md_bg_color: (255, 255, 255, 0.2)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.08}
                    on_release: root.back_table()

                    MDLabel:
                        text: 'Pular por enquanto'
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}