<EmployeeAvatar>:
    name: 'EmployeeAvatar'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        id: principal

        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: '37dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}
                    on_release: root.back_employee()

                MDLabel:
                    text: 'Finalizar'
                    font_style: 'Headline'
                    role: 'medium'
                    pos_hint: {'center_x': 0.2}
                    halign: 'center'


        MDLabel:
            text: 'Adicione uma imagem para reconhecer o funcionario'
            bold: True
            theme_text_color: 'Custom'
            text_color: 'black'
            font_style: 'Title'
            role: 'large'
            padding: [15, 0, 30, 0]
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}

        MDCard:
            size_hint: 0.9, 0.35
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            theme_line_color: 'Custom'
            border: [0,]
            line_color: 'grey'
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            MDRelativeLayout:

                AsyncImage:
                    id: perfil
                    source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1739042532/image_lhoahm.png'
                    radius: [100, 100, 100, 100]
                    size_hint: None, None
                    size_hint: 0.5, 0.45
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    theme_line_color: 'Custom'
                    line_color: 'black'

                MDLabel:
                    text: root.name_employee
                    halign: 'center'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.28}

                MDLabel:
                    text: f'Trabalha de {root.function} ganhando {root.salary}'
                    font_style: 'Label'
                    role: 'large'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    padding: [20, 0, 20, 0]
                    pos_hint: {'center_x': 0.5, 'center_y': 0.15}

        MDButton:
            style: 'elevated'
            theme_bg_color: 'Custom'
            md_bg_color: 0, 0, 1, 1
            theme_width: 'Custom'
            theme_height: 'Custom'
            size_hint_x: .9
            size_hint_y: 0.07
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}
            halign: 'center'
            radius: [25,]
            on_release: root.open_gallery()

            MDButtonText:
                text: 'Adicionar imagem'
                theme_text_color: 'Custom'
                text_color: 'white'
                font_style: 'Title'
                role: 'medium'
                bold: True
                halign: 'center'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}


        MDButton:
            style: 'elevated'
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            theme_width: 'Custom'
            theme_height: 'Custom'
            size_hint_x: .9
            size_hint_y: 0.07
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}
            halign: 'center'
            theme_line_color: 'Custom'
            line_color: 'white'
            radius: [25,]
            on_release: root.post_employ_no_avatar()

            MDButtonText:
                text: 'Pular por enquanto'
                theme_text_color: 'Custom'
                text_color: 'black'
                font_style: 'Title'
                role: 'medium'
                bold: True
                halign: 'center'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
