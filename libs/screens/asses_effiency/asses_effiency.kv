<AssesEffiency>:
    name: 'AssesEfficiency'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]
                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: '37dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}
                    on_release: root.back_evaluation()

                MDLabel:
                    text: 'Eficiência'
                    font_style: 'Headline'
                    role: 'medium'
                    bold: True
                    pos_hint: {'center_x': 0.2}
                    halign: 'center'

        AsyncImage:
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1739901218/image_lofng6.png'
            size_hint: 0.5, 0.25
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        MDLabel:
            text: 'Em uma escala de 1 a 5, como você avaliaria a qualidade e a rapidez com a qual seu funcionario trabalha?'
            theme_text_color: 'Custom'
            text_color: 'grey'
            font_style: 'Label'
            role: 'large'
            halign: 'center'
            padding: [15, 0, 15, 0]


        MDAnchorLayout:
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            anchor_x: 'center'
            anchor_y: 'center'

            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_size: True  # Ajusta automaticamente ao tamanho dos ícones
                spacing: dp(10)  # Espaçamento entre os ícones

                MDIconButton:
                    id: number_one
                    icon: 'star-outline'
                    on_release: root.replace_star(1)
                    theme_icon_color: 'Custom'
                    icon_size: dp(30)

                MDIconButton:
                    id: number_two
                    icon: 'star-outline'
                    on_release: root.replace_star(2)
                    theme_icon_color: 'Custom'
                    icon_size: dp(30)

                MDIconButton:
                    id: number_three
                    icon: 'star-outline'
                    on_release: root.replace_star(3)
                    theme_icon_color: 'Custom'
                    icon_size: dp(30)

                MDIconButton:
                    id: number_four
                    icon: 'star-outline'
                    on_release: root.replace_star(4)
                    theme_icon_color: 'Custom'
                    icon_size: dp(30)

                MDIconButton:
                    id: number_five
                    icon: 'star-outline'
                    on_release: root.replace_star(5)
                    theme_icon_color: 'Custom'
                    icon_size: dp(30)

        MDCard:
            style: 'elevated'
            size_hint: 0.75, 0.07
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            theme_bg_color: 'Custom'
            md_bg_color: 'cyan'
            on_release: root.step_one()
            MDRelativeLayout:
                MDLabel:
                    text: 'Salvar'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    bold: True
