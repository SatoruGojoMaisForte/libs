<VacancyContractor>:
    name: 'VacancyContractor'
    md_bg_color: 1, 1, 1, 1

    MDFloatLayout:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#49D49D')
            pos_hint: {'center_x': 0.5, 'top': 1}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDLabel:
                    text: 'Oportunidades'
                    font_style: 'Headline'
                    height: '60dp'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    role: 'small'
                    bold: True
                    halign: 'center'
                    valign: 'center'
                    padding: [0, 10, 0, 0]
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.95, 0.1
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'top': 0.85}

            MDTextField:
                id: tp
                radius: [20,]
                on_text: root.search(self, self.text)

                MDTextFieldLeadingIcon:
                    icon: "magnify"

                MDTextFieldHintText:
                    id: hint
                    text: ''
                    padding: [10, 0, 0, 0]
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 0.95, 0.07
            padding: [10, 10, 0, 0]
            spacing: "10dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'top': 0.74}

            MDChip:
                id: loc
                type: "input"
                theme_bg_color: 'Custom'
                theme_line_color: 'Custom'
                line_color: get_color_from_hex('#49D49D')
                md_bg_color: get_color_from_hex('#49D49D')
                _no_ripple_effect: True
                on_release: root.loc()

                pos_hint: {'center_y': 0.8}

                MDChipText:
                    id: loc_text
                    text: "Localização"
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    font_style: 'Label'
                    role: 'medium'
                    bold: True

            MDChip:
                id: func
                type: "input"
                theme_bg_color: 'Custom'
                theme_line_color: 'Custom'
                line_color: get_color_from_hex('#49D49D')
                _no_ripple_effect: True
                on_release: root.func()
                pos_hint: {'center_y': 0.8}

                MDChipText:
                    id: func_text
                    text: "Função"
                    theme_text_color: 'Custom'
                    text_color: get_color_from_hex('#49D49D')
                    font_style: 'Label'
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    role: 'medium'
                    bold: True

        MDScrollView:
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            do_scroll_x: False
            theme_bg_color: 'Custom'
            size_hint: 0.9, 0.5
            on_scroll_y: root.check_scroll(self)

            MDBoxLayout:
                id: main_scroll
                spacing: 2
                adaptive_height: True
                padding:[10,]
                orientation: "vertical"

        MDNavigationBar:
            animation: False
            theme_bg_color: 'Custom'
            md_bg_color: 'white'

            MDNavigationItem:
                id: table
                active: root.current_nav_state == 'table'
                on_release: root.bricklayer()

                MDNavigationItemIcon:
                    id: icon_table
                    icon: 'table'
                    theme_icon_color: 'Custom'
                    icon_color: 0.5, 0.5, 0.5, 1  # cor padrão

            MDNavigationItem:
                id: search
                active: root.current_nav_state == 'search'

                MDNavigationItemIcon:
                    id: icon_search
                    icon: 'magnify'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'

            MDNavigationItem:
                id: request
                active: root.current_nav_state == 'request'
                on_release: root.request()

                MDNavigationItemIcon:
                    id: icon_request
                    icon: 'clipboard-list'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'

            MDNavigationItem:
                id: perfil
                active: root.current_nav_state == 'perfil'
                on_release: root.passo()

                MDNavigationItemIcon:
                    id: icon_perfil
                    icon: 'account-outline'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'