<PermissionScreen>:
    name: 'Permission'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDLabel:
            text: 'Permissões'
            font_style: 'Headline'
            role: 'large'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}

        AsyncImage:
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1736802535/Design_sem_nome-removebg-preview_wpczdi.png'
            size_hint: 0.6, 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        MDLabel:
            text: 'Por favor, solicitamos que você conceda as permissõe para melhor funcionamento do app.'
            theme_text_color: 'Custom'
            font_style: 'Label'
            role: 'large'
            text_color: 'grey'
            size_hint_x: None
            width: dp(260)
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.48}

        MDButton:
            style: 'outlined'
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}
            on_release: root.request_permission()

            MDButtonText:
                text: 'Conceder permissões'
                theme_text_color: 'Custom'
                text_color: 'green'
