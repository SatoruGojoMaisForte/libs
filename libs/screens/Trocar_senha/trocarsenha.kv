<TrocarSenha>:
    name: 'trocar'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDLabel:
            text: 'Alterar palavra-passe'
            font_style: 'Headline'
            role: 'medium'
            bold: True
            pos_hint: {'center_y': 0.92, 'center_x': 0.55}


        MDLabel:
            text: "Proteja sua conta! Sua senha precisa ter pelo menos 6 caracteres, combinando letras e números para garantir máxima segurança."
            size_hint: None, None
            size: "380dp", "150dp"
            font_style: "Title"
            role: "small"
            pos_hint: {"center_x": 0.53, "center_y": 0.83}
            halign: "left"

        MDCard:
            adaptive_size: True
            pos_hint: {"center_y": 0.68, "center_x": 0.5}
            size_hint: 0.87, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1

            MDRelativeLayout:
                MDTextField:
                    id: senha
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    line_color_focus: 'blue'
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    pos_hint: {"center_y": 0.6, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "lock"
                    mode: "outlined"
                    radius: 15, 15, 15, 15
                    on_text: root.modificar('senha')

                    MDTextFieldLeadingIcon:
                        icon: "lock"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: 'blue'

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: 'grey'
                        text: 'Senha'



        MDCard:
            adaptive_size: True
            pos_hint: {"center_y": 0.58, "center_x": 0.5}
            size_hint: 0.87, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1

            MDRelativeLayout:
                MDTextField:
                    id: confirmar
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    line_color_focus: 'blue'
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    pos_hint: {"center_y": 0.6, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "lock"
                    mode: "outlined"
                    radius: 15, 15, 15, 15
                    on_text: root.modificar('confirmar')

                    MDTextFieldLeadingIcon:
                        id: hint
                        icon: "lock"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: 'blue'

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: 'grey'
                        text: 'Confirmar senha'


                MDLabel:
                    id: erro
                    text: ''
                    font_style: 'Title'
                    role: 'small'
                    bold: True
                    theme_text_color: 'Custom'
                    text_color: 'red'
                    halign: 'right'
                    pos_hint: {"center_y": 0.1, 'center_x': 0.5}

        MDButton:
            pos_hint: {"center_y": 0.47, "center_x": 0.8}
            theme_bg_color: 'Custom'
            md_bg_color: 0, 0, 0, 1
            on_release: root.visibilizar_senha1()

            MDButtonText:
                text: 'Mostrar'
                theme_text_color: 'Custom'
                text_color: 'white'
        MDLabel:
            id: erro
            text: ''
            font_style: 'Title'
            role: 'small'
            bold: True
            theme_text_color: 'Custom'
            text_color: 'red'
            pos_hint: {'center_y': 0.48, 'center_x': 0.56}

        MDCard:
            style: 'elevated'
            size_hint: None, None
            size: "320", "55dp"
            pos_hint: {"center_y": 0.2, "center_x": 0.5}
            padding: "16dp"
            size_hint: None, None
            # Sets custom properties.
            theme_shadow_color: "Custom"
            shadow_color: "black"
            theme_bg_color: "Custom"
            md_bg_color: 1, 0, 1, 0
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.requisitos()

            radius: [15]

            BoxLayout:  # Usa BoxLayout para controlar o layout interno do card
                size_hint: 1, 1
                orientation: 'horizontal'
                padding: 0
                spacing: 0

                MDLabel:
                    text: "Verificar"
                    theme_text_color: "Custom"
                    text_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    halign: 'center'
                    font_style: "Title"
                    bold: True
                    role: "medium"
