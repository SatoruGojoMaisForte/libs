<TrocarSenha>:
    name: 'trocar'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        # Nick da pessoa e botão de voltar para o login
        MDLabel:
            text: root.nome()
            font_style: 'Headline'
            role: 'small'
            pos_hint: {'center_y': 0.95, 'center_x': 0.55}

        MDLabel:
            text: 'Alterar palavra-passe'
            font_style: 'Headline'
            role: 'medium'
            bold: True
            pos_hint: {'center_y': 0.88, 'center_x': 0.55}


        MDLabel:
            text: "Proteja sua conta! Sua senha precisa ter pelo menos 6 caracteres, combinando letras e números para garantir máxima segurança."
            size_hint: None, None
            size: "380dp", "150dp"
            font_style: "Title"
            role: "small"
            pos_hint: {"center_x": 0.53, "center_y": 0.8}
            halign: "left"

        MDTextField:
            id: senha
            theme_line_color: 'Custom'
            line_color_normal: 'black'
            hint_text: "Usuario ou email"
            pos_hint: {"center_y": 0.66, "center_x": 0.47}
            size_hint: 0.84, None
            icon_right: "account"
            mode: "outlined"
            on_text: root.modificar('senha')

            MDTextFieldHintText:
                text: 'Nova palavra-passe'

        MDTextField:
            id: confirmar
            theme_line_color: 'Custom'
            line_color_normal: 'black'
            hint_text: "Usuario ou email"
            pos_hint: {"center_y": 0.55, "center_x": 0.47}
            size_hint: 0.84, None
            icon_right: "account"
            mode: "outlined"
            on_text: root.modificar('confirmar')

            MDTextFieldHintText:
                id: hint
                text: 'Confirmar nova palavra-passe'

        MDButton:
            pos_hint: {"center_y": 0.47, "center_x": 0.78}
            theme_bg_color: 'Custom'
            md_bg_color: 0, 0, 0, 1
            on_release: root.visibilizar_senha1()

            MDButtonText:
                text: 'Mostrar'
                theme_text_color: 'Custom'
                text_color: 'white'
        MDLabel:
            id: erro
            text: ''
            font_style: 'Title'
            role: 'small'
            bold: True
            theme_text_color: 'Custom'
            text_color: 'red'
            pos_hint: {'center_y': 0.48, 'center_x': 0.56}

        MDCard:
            style: 'elevated'
            size_hint: None, None
            size: "320", "55dp"
            pos_hint: {"center_y": 0.2, "center_x": 0.5}
            padding: "16dp"
            size_hint: None, None
            # Sets custom properties.
            theme_shadow_color: "Custom"
            shadow_color: "black"
            theme_bg_color: "Custom"
            md_bg_color: 1, 0, 1, 0
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.requisitos()

            radius: [15]

            BoxLayout:  # Usa BoxLayout para controlar o layout interno do card
                size_hint: 1, 1
                orientation: 'horizontal'
                padding: 0
                spacing: 0

                MDLabel:
                    text: "Verificar"
                    theme_text_color: "Custom"
                    text_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    halign: 'center'
                    font_style: "Title"
                    bold: True
                    role: "medium"
