<InitScreen>:
    name: 'Init'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDLabel:
            text: 'Quem est√° fazendo login?'
            font_style: 'Headline'
            role: 'small'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}

        AsyncImage:
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1731356958/image_1_b4lx6y.png'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}


        MDLabel:
            theme_font_size: "Custom"
            text: "Entre com seu Login"
            font_size: "23sp"
            halign: 'center'
            padding: "10dp", "20dp", 0, 0
            pos_hint: {'center_x': 0.5, 'center_y': 0.62}

        MDCard:
            adaptive_size: True
            pos_hint: {"center_y": 0.48, "center_x": 0.5}
            size_hint: 0.8, 0.1
            theme_bg_color: "Custom"
            md_bg_color: "white"
            bold: True
            md_bg_color_disabled: "white"


            MDRelativeLayout:
                MDTextField:
                    id: nome
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    line_color_focus: 'blue'
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    pos_hint: {"center_y": 0.65, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "account"
                    mode: "outlined"
                    radius: 15, 15, 15, 15

                    MDTextFieldLeadingIcon:
                        icon: "account-circle"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: 'blue'

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: 'grey'
                        text: 'Nome'
                MDLabel:
                    id: nome_errado
                    text: ''
                    theme_text_color: 'Custom'
                    font_style: 'Title'
                    role: 'small'
                    text_color: 'red'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                    halign: 'right'

        MDCard:
            adaptive_size: True
            pos_hint: {"center_y": 0.37, "center_x": 0.5}
            size_hint: 0.8, 0.1
            theme_bg_color: "Custom"
            md_bg_color: "white"
            md_bg_color_disabled: "white"


            MDRelativeLayout:
                MDTextField:
                    id: senha
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    line_color_focus: 'blue'
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    pos_hint: {"center_y": 0.65, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "account"
                    mode: "outlined"
                    radius: 15, 15, 15, 15

                    MDTextFieldLeadingIcon:
                        icon: "lock"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: 'blue'

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: 'grey'
                        text: 'Senha'

                MDLabel:
                    id: senha_errada
                    text: ''
                    theme_text_color: 'Custom'
                    font_style: 'Title'
                    role: 'small'
                    text_color: 'red'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                    halign: 'right'
        MDCard:
            style: 'elevated'
            size_hint: 0.8, 0.085
            pos_hint: {'center_y': 0.26, 'center_x': 0.5}
            theme_shadow_color: "Custom"
            shadow_color: [0.0, 1.0, 0.0, 1.0]
            theme_bg_color: "Custom"
            md_bg_color: "black"
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.etapa1()

            MDRelativeLayout:
                MDLabel:
                    text: 'Login'
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    bold: True

        MDButton:
            style: 'text'
            pos_hint: {'center_y': 0.1, 'center_x': 0.5}
            md_bg_color: 1, 1, 1, 1
            halign: 'center'
            on_release: root.register()

            MDButtonText:
                text: 'Criar uma conta'
                theme_text_color: 'Custom'
                text_color: 'black'
                font_style: 'Title'
                role: 'medium'

