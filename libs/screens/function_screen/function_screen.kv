#: import get_color_from_hex kivy.utils.get_color_from_hex

<FunctionScreen>:
    name: 'Function'
    md_bg_color: get_color_from_hex('#2563EB')

    FloatLayout:

        MDBoxLayout:
            size_hint: 0.95, 0.95
            theme_bg_color: 'Custom'
            md_bg_color: (255, 255, 255, 0.2)
            radius: [15,]
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDRelativeLayout:
                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: '33dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    theme_bg_color: 'Custom'
                    on_release: root.page()
                    pos_hint: {'center_x': 0.18, 'center_y': 0.94}

                MDLabel:
                    text: 'Função Técnica'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    font_style: 'Headline'
                    role: 'small'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.93}
                    halign: 'center'
                    bold: True

                MDDivider:
                    size_hint_x: 0.9
                    color: 'white'
                    divider_width: '2dp'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.89}

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.9, 0.05

                    pos_hint: {'center_x': 0.5, 'center_y': 0.83}

                    MDIcon:
                        icon: 'map-marker-outline'
                        theme_icon_color: 'Custom'
                        icon_color: 'white'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDLabel:
                        text: 'Localização'
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        bold: True
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDCard:
                    id: card_state
                    size_hint: 0.9, 0.07
                    height: self.width
                    pos_hint: {'center_x': 0.5, 'center_y': 0.76}
                    theme_bg_color: 'Custom'
                    md_bg_color: (255, 255, 255, 0.2)
                    on_release: root.menu.open()

                    MDRelativeLayout:
                        MDLabel:
                            id: state
                            text: 'Selecione um Estado'
                            theme_text_color: 'Custom'
                            text_color: 'white'
                            halign: 'left'
                            pos_hint: {'center_x': 0.6, 'center_y': 0.5}

                        MDIcon:
                            icon: 'arrow-down'
                            theme_icon_color: 'Custom'
                            icon_color: 'white'
                            pos_hint: {'center_x': 0.9, 'center_y': 0.5}

                MDCard:
                    id: card_city
                    size_hint: 0.9, 0.07
                    height: self.width
                    pos_hint: {'center_x': 0.5, 'center_y': 0.68}
                    theme_bg_color: 'Custom'
                    md_bg_color: (255, 255, 255, 0.2)
                    on_release: root.menu_city.open()

                    MDRelativeLayout:
                        MDLabel:
                            id: city
                            text: 'Selecione uma cidade'
                            theme_text_color: 'Custom'
                            text_color: 'white'
                            halign: 'left'
                            pos_hint: {'center_x': 0.6, 'center_y': 0.5}

                        MDIcon:
                            icon: 'arrow-down'
                            theme_icon_color: 'Custom'
                            icon_color: 'white'
                            pos_hint: {'center_x': 0.9, 'center_y': 0.5}

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.9, 0.05
                    spacing: 2
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}

                    MDIcon:
                        icon: 'bag-checked'
                        theme_icon_color: 'Custom'
                        icon_color: 'white'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDLabel:
                        text: 'Profissão'
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        bold: True
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDCard:
                    id: card_function
                    size_hint: 0.9, 0.07
                    height: self.width
                    pos_hint: {'center_x': 0.5, 'center_y': 0.53}
                    theme_bg_color: 'Custom'
                    md_bg_color: (255, 255, 255, 0.2)
                    on_release: root.menu2.open()

                    MDRelativeLayout:
                        MDLabel:
                            id: function
                            text: 'Selecione uma profissão'
                            theme_text_color: 'Custom'
                            text_color: 'white'
                            halign: 'left'
                            pos_hint: {'center_x': 0.6, 'center_y': 0.5}

                        MDIcon:
                            icon: 'arrow-down'
                            theme_icon_color: 'Custom'
                            icon_color: 'white'
                            pos_hint: {'center_x': 0.9, 'center_y': 0.5}

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.9, 0.05
                    spacing: 2
                    pos_hint: {'center_x': 0.5, 'center_y': 0.45}

                    MDIcon:
                        icon: 'currency-usd'
                        theme_icon_color: 'Custom'
                        icon_color: 'white'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDLabel:
                        text: 'Remuneração'
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        bold: True
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDTextField:
                    id: salary
                    mode: 'outlined'
                    size_hint: 0.9, None
                    radius: [15,]
                    input_filter: 'float'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.38}
                    height: '50dp'
                    theme_text_color: 'Custom'
                    text_color_focus: get_color_from_hex('#FFFB46')
                    text_color_normal: get_color_from_hex('#FFFB46')
                    theme_line_color: 'Custom'
                    line_color_focus: 'white'
                    line_color_normal: 'white'

                    MDTextFieldLeadingIcon:
                        icon: "cash-multiple"
                        theme_icon_color: "Custom"
                        icon_color_normal: "white"
                        icon_color_focus: 'white'

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.9, 0.05
                    spacing: 2
                    pos_hint: {'center_x': 0.5, 'center_y': 0.29}

                    MDIcon:
                        icon: 'calendar-blank'
                        theme_icon_color: 'Custom'
                        icon_color: 'white'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDLabel:
                        text: 'Metodod de pagamento'
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        bold: True
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.9, 0.15
                    pos_hint: {'center_x': 0.5, 'center_y': 0.18}
                    padding: [5,]
                    spacing: dp(5)

                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.5, 1
                        spacing: dp(5)


                        MDCard:
                            id: card_day
                            size_hint: 1, 0.15
                            theme_bg_color: 'Custom'
                            md_bg_color: (255, 255, 255, 0.2)
                            on_release: root.click_day()
                            theme_line_color: 'Custom'

                            MDRelativeLayout:

                                MDLabel:
                                    text: 'Diaria'
                                    halign: 'center'
                                    theme_text_color: 'Custom'
                                    text_color: 'white'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                        MDCard:
                            id: card_month
                            size_hint: 1, 0.15
                            theme_bg_color: 'Custom'
                            md_bg_color: (255, 255, 255, 0.2)
                            theme_line_color: 'Custom'
                            on_release: root.click_month()

                            MDRelativeLayout:

                                MDLabel:
                                    text: 'Mensal'
                                    halign: 'center'
                                    theme_text_color: 'Custom'
                                    text_color: 'white'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}


                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.5, 1
                        spacing: dp(5)

                        MDCard:
                            id: card_week
                            size_hint: 1, 0.15
                            theme_bg_color: 'Custom'
                            md_bg_color: (255, 255, 255, 0.2)
                            theme_line_color: 'Custom'
                            on_release: root.click_week()

                            MDRelativeLayout:

                                MDLabel:
                                    text: 'Semanal'
                                    halign: 'center'
                                    theme_text_color: 'Custom'
                                    text_color: 'white'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                        MDCard:
                            id: card_bricklayer
                            size_hint: 1, 0.15
                            theme_bg_color: 'Custom'
                            md_bg_color: (255, 255, 255, 0.2)
                            theme_line_color: 'Custom'
                            on_release: root.click_bricklayer()

                            MDRelativeLayout:

                                MDLabel:
                                    text: 'Empreita'
                                    halign: 'center'
                                    theme_text_color: 'Custom'
                                    text_color: 'white'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}


                MDButton:
                    style: "tonal"
                    theme_width: "Custom"
                    height: "45dp"
                    theme_bg_color: 'Custom'
                    md_bg_color: get_color_from_hex('#2563EB')
                    size_hint_x: .9
                    pos_hint: {'center_x': 0.5, 'center_y': 0.06}
                    on_release: root.step_one()

                    MDButtonIcon:
                        icon: 'plus'
                        theme_icon_color: 'Custom'
                        icon_color: 'white'
                        theme_font_size: 'Custom'
                        font_size: '30dp'
                        pos_hint: {'center_x': 0.27, 'center_y': 0.5}

                    MDButtonText:
                        text: 'Adicionar vaga'
                        bold: True
                        haligm: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        theme_text_color: 'Custom'
                        text_color: 'white'