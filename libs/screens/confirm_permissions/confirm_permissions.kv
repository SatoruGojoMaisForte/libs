<ConfirmPermissions>:
    name: 'Confirm'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDLabel:
            text: 'Oque fazer?'
            bold: True
            font_style: 'Headline'
            role: 'medium'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}

        AsyncImage:
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1736977115/erase-removebg-preview_wzpvuc.png'
            size_hint: 0.7, 0.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}

        MDLabel:
            text: 'Para ativar as permissões, vá em configurações do aplicativo em seguida clique em permissões e ative as permissões de imagens'
            font_style: 'Label'
            role: 'large'
            theme_text_color: 'Custom'
            text_color: 'grey'
            size_hint_x: 0.85
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.39}

        MDButton:
            id: botton
            style: 'outlined'
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            on_release: root.next_page()

            MDButtonText:
                id: text
                text: 'Prosseguir'
                theme_text_color: 'Custom'
                text_color: 'green'
