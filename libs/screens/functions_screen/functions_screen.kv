#: import get_color_from_hex kivy.utils.get_color_from_hex

<FunctionsScreen>:
    name: 'FunctionsScreen'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint: 1, 0.13
            padding: [10, 10, 0, 0]
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#5BC0EB')
            pos_hint: {'center_x': 0.5, 'top': 1}

            MDRelativeLayout:

                MDIconButton:
                    icon: 'arrow-left'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    theme_font_size: 'Custom'
                    font_size: '30sp'
                    on_release: root.perfil()
                    pos_hint: {'center_x': 0.05, 'center_y': 0.55}

                MDLabel:
                    text: 'Funções do funcionario'
                    font_style: 'Headline'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    role: 'medium'
                    theme_font_size: 'Custom'
                    font_size: '23sp'
                    bold: True
                    pos_hint: {'center_x': 0.53, 'center_y': 0.65}
                    halign: 'center'

                MDLabel:
                    text: 'Funções, tipo de pagamento, local e remuneração'
                    font_style: 'Headline'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    role: 'medium'
                    theme_font_size: 'Custom'
                    font_size: '12sp'
                    pos_hint: {'center_x': 0.53, 'center_y': 0.27}
                    halign: 'center'

        MDBoxLayout:
            size_hint: 0.87, None
            height: self.minimum_height
            padding: dp(10)
            spacing: dp(10)
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            md_bg_color: get_color_from_hex('#E6E6EA')
            theme_bg_color: 'Custom'

            MDDivider:
                orientation: 'vertical'
                size_hint_y: 1
                divider_width: '8dp'  # Mais largo
                color: get_color_from_hex('#5BC0EB')
                pos_hint: {'center_y': 0.5}

            MDLabel:
                text: "[b]Informação:[/b] As funções, tipo de pagamento, local e valor do salário listados abaixo foram requeridos pelo contratante e já estão armazenados no banco de dados do funcionário."
                markup: True
                theme_text_color: "Primary"
                theme_font_size: 'Custom'
                font_size: '13sp'  # Fonte pequena, do jeito que pediu
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                halign: 'left'

        MDBoxLayout:
            pos_hint: {'center_x': 0.8, 'center_y': 0.08}
            size_hint: 0.16, 0.08
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#5BC0EB')
            radius: 100
            MDRelativeLayout:

                MDIconButton:
                    icon: 'plus'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    theme_font_size: 'Custom'
                    font_size: '40sp'
                    padding: [10,]
                    on_release: root.page_functions()
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDBoxLayout:

        ScrollView:
            do_scroll_x: False
            size_hint: 0.9, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0  # Cor de fundo (cinza escuro)
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDBoxLayout:
                id: main_scroll
                orientation: "vertical"
                adaptive_height: True
