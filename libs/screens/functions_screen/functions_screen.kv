#: import NavigationsButtons libs.components.navigation_buttons.NavigationsButtons

<FunctionsScreen>:
    name: 'Functions'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDLabel:
            text: 'Funções requeridas'
            font_style: 'Headline'
            role: 'medium'
            bold: True
            halign: 'left'
            pos_hint: {'center_x': 0.55, 'center_y': 0.95}

        MDDivider:
            size_hint_x: 0.3
            divider_width: '4dp'
            color: 'blue'
            pos_hint: {'center_x': 0.2, 'center_y': 0.93}


        ScrollView:
            do_scroll_x: False
            size_hint: 1, 0.75
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0  # Cor de fundo (cinza escuro)
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDBoxLayout:
                id: main_scroll
                orientation: "vertical"
                adaptive_height: True

        MDIconButton:
            icon: 'plus'
            theme_font_size: 'Custom'
            font_size: '40dp'
            pos_hint: {'right': 0.95, 'center_y': 0.95}
            on_release: root.page_functions()

        MDCard:
            style: 'elevated'
            size_hint: 0.88, 0.08
            pos_hint: {'center_y': 0.05, 'center_x': 0.5}
            theme_shadow_color: "Custom"
            shadow_color: 0.0, 1.0, 0.0, 1.0
            theme_bg_color: "Custom"
            md_bg_color: "black"
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.perfil()

            MDRelativeLayout:
                MDLabel:
                    text: 'Voltar'
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    bold: True

