<SendCode>:
    name: 'Send'
    md_bg_color: self.theme_cls.backgroundColor

    FloatLayout:
        AsyncImage:
            source: "https://res.cloudinary.com/dsmgwupky/image/upload/v1729733436/image_1_wkbimv.png"
            size_hint: None, None
            size: "200dp", "150dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.67}
            allow_stretch: True

        MDLabel:
            text: 'Recuperar conta'
            bold: True
            font_style: "Headline"
            role: "small"
            halign: "center"
            pos_hint: {"center_y": 0.8, "center_x": 0.5}

        MDLabel:
            text: 'Recupere sua conta agora, e n√£o fique por fora das novidades'
            halign: "center"
            theme_text_color: 'Custom'
            text_color: 'black'
            font_style: "Title"
            role: "small"
            size_hint: 0.8, None
            size: 255, 15
            pos_hint: {'center_x': 0.5, 'center_y': 0.52}

        MDCard:
            pos_hint: {"center_y": 0.42, "center_x": 0.5}
            size_hint: 0.8, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1

            MDRelativeLayout:
                MDTextField:
                    id: verificar_email
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    line_color_focus: 'blue'
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    pos_hint: {"center_y": 0.65, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "account"
                    mode: "outlined"
                    radius: 15, 15, 15, 15

                    MDTextFieldLeadingIcon:
                        icon: "email"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: 'blue'

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: 'grey'
                        text: 'Email'

                MDLabel:
                    id: erros
                    text: ''
                    theme_text_color: "Custom"
                    text_color: 'red'
                    pos_hint: {'center_y': 0.1}
                    halign: 'right'
                    font_style: "Label"
                    role: "medium"

        MDCard:
            style: 'elevated'
            size_hint: 0.8, 0.07
            pos_hint: {"center_y": 0.32, "center_x": 0.5}
            padding: "16dp"
            # Sets custom properties.
            theme_shadow_color: "Custom"
            shadow_color: "black"
            theme_bg_color: "Custom"
            md_bg_color: (0.03, 0.4, 1)
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.enviar_codigo()

            radius: [15]

            BoxLayout:  # Usa BoxLayout para controlar o layout interno do card
                size_hint: 1, 1
                orientation: 'horizontal'
                padding: 0
                spacing: 0

                MDLabel:
                    text: "Verificar"
                    theme_text_color: "Custom"
                    text_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    halign: 'center'
                    font_style: "Title"
                    bold: True
                    role: "medium"


        MDLabel:
            text: 'ou'
            halign: 'center'
            pos_hint: {'center_y': 0.24}
            theme_text_color: "Custom"
            text_color: "white" if root.theme_cls.theme_style == "Dark" else "black"
            font_style: "Title"
            bold: True
            role: "medium"

        MDButton:
            style: "text"
            pos_hint: {'center_y': 0.20, "center_x": 0.5}


            MDButtonText:
                text: "Criar uma conta"
                theme_text_color: "Custom"
                text_color:"white" if root.theme_cls.theme_style == "Dark" else "black"
                font_style: "Title"
                bold: True
                role: "small"

        MDIconButton:
            icon: "arrow-left"
            theme_text_color: "Custom"
            text_color:"white" if root.theme_cls.theme_style == "Dark" else "black"
            pos_hint: {"center_y": 0.95}
            on_release: root.chama_login()
