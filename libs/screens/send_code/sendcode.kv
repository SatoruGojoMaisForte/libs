<SendCode>:
    name: 'Send'
    md_bg_color: self.theme_cls.backgroundColor

    FloatLayout:
        AsyncImage:
            source: "https://raw.githubusercontent.com/SatoruGojoMaisForte/logos/main/Images/Logo_chatto/logo5.png"
            size_hint: None, None
            size: "200dp", "150dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.77}
            allow_stretch: True

        MDLabel:
            text: 'Problemas com a senha ao tenta o login'
            bold: True
            font_style: "Title"
            role: "medium"
            halign: "center"
            pos_hint: {"center_y": 0.62, "center_x": 0.5}

        MDLabel:
            text: 'Insira seu email, para que possamos manda um codigo de verificação para recuperar sua conta'
            halign: "center"
            font_style: "Title"
            role: "small"
            size_hint: 0.8, None
            size: 255, 15
            pos_hint: {'center_x': 0.5, 'center_y': 0.56}

        MDTextField:
            id: verificar_email
            theme_line_color: 'Custom'
            line_color_normal: 'black'
            hint_text: "Digite o seu E-mail"
            pos_hint: {"center_y": 0.45, "center_x": 0.5}
            size_hint: 0.74, None
            icon_right: "account"
            mode: "outlined"

            MDTextFieldLeadingIcon:
                icon: "email"

        MDLabel:
            id: erros
            text: ''
            theme_text_color: "Custom"
            text_color: 'red'
            pos_hint: {"center_y": 0.51, "center_x": 0.65}
            font_style: "Label"
            role: "medium"

        MDCard:
            style: 'elevated'
            size_hint: None, None
            size: "300", "55dp"
            pos_hint: {"center_y": 0.33, "center_x": 0.5}
            padding: "16dp"
            size_hint: None, None
            # Sets custom properties.
            theme_shadow_color: "Custom"
            shadow_color: "black"
            theme_bg_color: "Custom"
            md_bg_color: 1, 0, 1, 0
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.enviar_codigo()

            radius: [15]

            BoxLayout:  # Usa BoxLayout para controlar o layout interno do card
                size_hint: 1, 1
                orientation: 'horizontal'
                padding: 0
                spacing: 0

                MDLabel:
                    text: "Verificar"
                    theme_text_color: "Custom"
                    text_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    halign: 'center'
                    font_style: "Title"
                    bold: True
                    role: "medium"


        MDLabel:
            text: 'ou'
            halign: 'center'
            pos_hint: {'center_y': 0.25}
            theme_text_color: "Custom"
            text_color: "white" if root.theme_cls.theme_style == "Dark" else "black"
            font_style: "Title"
            bold: True
            role: "medium"

        MDButton:
            style: "text"
            pos_hint: {'center_y': 0.20, "center_x": 0.5}


            MDButtonText:
                text: "Criar uma conta"
                theme_text_color: "Custom"
                text_color:"white" if root.theme_cls.theme_style == "Dark" else "black"
                font_style: "Title"
                bold: True
                role: "small"

        MDIconButton:
            icon: "arrow-left"
            theme_text_color: "Custom"
            text_color:"white" if root.theme_cls.theme_style == "Dark" else "black"
            pos_hint: {"center_y": 0.95}
            on_release: root.chama_login()