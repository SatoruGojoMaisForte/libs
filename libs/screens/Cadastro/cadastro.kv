<Cadastro>:
    name: 'cadastro'
    md_bg_color: 1, 1, 1, 1

    MDFloatLayout:
        id: centro

        MDLabel:
            pos_hint: {'center_y': 0.84}
            theme_text_color: 'Custom'
            text_color: 'black'
            text: 'Cadastrar'
            halign: 'center'
            valign: 'center'
            theme_font_size: 'Custom'
            font_size: '40sp'


        MDLabel:
            text: "Junte-se a nós! Cadastre-se agora e desbloqueie uma experiência única e personalizada."
            size_hint: 0.9, 0.5
            font_style: "Title"
            theme_text_color: 'Custom'
            text_color: 'black'
            role: "small"
            halign: 'center'
            pos_hint: {'center_y': 0.75, 'center_x': 0.5}
            spacing: 10

        MDCard:
            pos_hint: {"center_y": 0.62, "center_x": 0.5}
            size_hint: 0.87, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1

            MDRelativeLayout:
                MDTextField:
                    id: nome
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    line_color_focus: 'blue'
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    pos_hint: {"center_y": 0.65, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "account"
                    mode: "outlined"
                    radius: 15, 15, 15, 15

                    MDTextFieldLeadingIcon:
                        icon: "account-circle-outline"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: 'blue'

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: 'grey'
                        text: 'Nome do usuario'

                MDLabel:
                    id: erro_nome
                    text: ''
                    font_style: 'Title'
                    role: 'small'
                    theme_text_color: 'Custom'
                    text_color: 'red'
                    halign: 'right'
                    pos_hint: {'center_y': 0.1}

        MDCard:
            pos_hint: {"center_y": 0.51, "center_x": 0.5}
            size_hint: 0.87, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1

            MDRelativeLayout:
                MDTextField:
                    id: email
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    line_color_focus: 'blue'
                    theme_bg_color: "Custom"
                    md_bg_color: 0, 1, 1, 1
                    pos_hint: {"center_y": 0.65, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "account"
                    mode: "outlined"
                    radius: 15, 15, 15, 15

                    MDTextFieldLeadingIcon:
                        icon: "email"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: 'blue'

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: 'grey'
                        text: 'Email'

                MDLabel:
                    id: erro_email
                    text: ''
                    font_style: 'Title'
                    role: 'small'
                    theme_text_color: 'Custom'
                    text_color: 'red'
                    pos_hint: {'center_y': 0.1}
                    halign: 'right'

        MDCard:
            pos_hint: {"center_y": 0.4, "center_x": 0.5}
            size_hint: 0.87, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            border: [15,]

            MDRelativeLayout:
                MDTextField:
                    id: senha
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    line_color_focus: 'blue'
                    theme_text_color: 'Custom'
                    text_color_focus: 'black'
                    text_color_normal: 'grey'
                    pos_hint: {"center_y": 0.65, "center_x": 0.5}
                    size_hint: 1, None
                    icon_right: "account"
                    mode: "outlined"
                    radius: 15, 15, 15, 15

                    MDTextFieldLeadingIcon:
                        icon: "lock"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: 'blue'

                    MDTextFieldHintText:
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        text_color_focus: 'grey'
                        text: 'Senha'

                MDLabel:
                    id: erro_senha
                    text: ''
                    font_style: 'Title'
                    role: 'small'
                    theme_text_color: 'Custom'
                    text_color: 'red'
                    pos_hint: {'center_y': 0.1}
                    halign: 'right'

        MDCard:
            id: glowing_card
            style: 'elevated'
            size_hint: 0.85, 0.07
            pos_hint: {"center_y": 0.29, "center_x": 0.5}
            padding: "16dp"
            theme_shadow_color: "Custom"
            shadow_color: "black"
            theme_bg_color: "Custom"
            md_bg_color: (0.03, 0.4, 1)
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.logica()

            radius: [15]

            BoxLayout:
                size_hint: 1, 1
                orientation: 'vertical'
                padding: 0
                spacing: 0

                MDLabel:

                    text: "Cadastrar"
                    theme_text_color: "Custom"
                    text_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    halign: 'center'
                    font_style: "Title"
                    bold: True

        MDIconButton:
            icon: 'arrow-left'
            theme_font_size: 'Custom'
            font_size: '35dp'
            theme_icon_color: 'Custom'
            icon_color: 'black'
            pos_hint: {'center_x': 0.1, 'center_y': 0.96}
            on_release: root.login()





