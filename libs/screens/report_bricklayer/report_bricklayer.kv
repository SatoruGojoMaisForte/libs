#: import get_color_from_hex kivy.utils.get_color_from_hex
<ReportBricklayer>:
    name: 'ReportBricklayer'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#35FF69')
            pos_hint: {'center_x': 0.5, 'top': 1}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: dp(30)
                    height: '60dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    on_release: root.cancel()

                MDLabel:
                    text: 'Relatorio'
                    font_style: 'Headline'
                    height: '60dp'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    role: 'small'
                    bold: True
                    halign: 'center'
                    valign: 'center'
                    padding: [0, 10, 0, 0]
                    pos_hint: {'center_x': 0.5 }

        FitImage:
            id: avatar
            source: root.avatar
            size_hint: 0.3, 0.15
            pos_hint: {'center_x': 0.23, 'center_y': 0.79}

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            size_hint_x: 0.6
            height: "85dp"  # Fixed height for the entire container
            theme_bg_color: 'Custom'
            padding: [10, 0, 0, 0]
            md_bg_color: 1, 1, 1, 1
            spacing: 15
            pos_hint: {'center_x': 0.7, 'center_y': 0.79}

            MDBoxLayout:
                orientation: 'vertical'
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [0, 10, 0, 10]
                pos_hint: {'center_y': 0.5}

                MDLabel:
                    id: name
                    font_style: 'Title'
                    role: 'large'
                    bold: True
                    text: root.employee_name
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    id: function
                    text: root.function
                    font_style: 'Title'
                    role: 'medium'
                    size_hint_y: None
                    height: self.texture_size[1]

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.1
            theme_bg_color: 'Custom'
            padding: [30, 0, 20, 0]
            spacing: 30
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.64}

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1

                MDLabel:
                    text: 'Informações de Prazo'
                    font_style: 'Title'
                    role: 'medium'
                    bold: True

            MDBoxLayout:
                orientation: 'vertical'
                theme_bg_color: 'Custom'
                spacing: 30
                md_bg_color: 1, 1, 1, 1

                MDLabel:
                    id: init
                    text: f'Prazo inicial: {root.day}'
                    font_style: 'Title'
                    role: 'small'

                MDLabel:
                    id: remain
                    text: f'Tempo restante: {root.remainder}'
                    font_style: 'Title'
                    role: 'small'
                    theme_text_color: 'Custom'
                    text_color: 0.0, 1.0, 0.0, 1.0

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.06
            theme_bg_color: 'Custom'
            padding: [30, 0, 20, 0]
            spacing: 30
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.51}

            MDLabel:
                text: 'Vales retirados'
                font_style: 'Title'
                role: 'medium'
                bold: True
                theme_text_color: 'Custom'
                text_color: 'black'

            MDCard:
                size_hint: 0.4, 0.8
                id: button_valley
                style: 'elevated'
                theme_bg_color: 'Custom'
                md_bg_color: get_color_from_hex('#35FF69')
                on_release: root.dialog.open()

                MDRelativeLayout:
                    MDButtonIcon:
                        icon: 'plus'
                        theme_icon_color: 'Custom'
                        icon_color: 'white'
                        pos_hint: {'center_x': 0.25, 'center_y': 0.5}

                    MDButtonText:
                        text: 'Novo'
                        bold: True
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        halign: 'center'
                        pos_hint: {'center_x': 0.65, 'center_y': 0.5}

        MDScrollView:
            do_scroll_x: False
            size_hint: 1, 0.35
            pos_hint: {'center_x': 0.5, 'center_y': 0.29}

            MDBoxLayout:
                id: valleys
                orientation: 'vertical'
                adaptive_height: True
                padding: [20, 0, 0, 0]

        MDLabel:
            id: tot
            font_style: 'Title'
            role: 'medium'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.3, 'center_y': 0.05}

        MDCard:
            id: restart_card
            size_hint: 0.35, 0.06
            pos_hint: {'center_x': 0.75, 'center_y': 0.05}
            style: 'elevated'
            radius: [25,]
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#35FF69')
            on_release: root.restart_firebase()

            MDRelativeLayout:

                MDButtonIcon:
                    icon: 'restart'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    pos_hint: {'center_y': 0.5, 'center_x': 0.2}

                MDButtonText:
                    text: 'Reiniciar'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    bold: True
                    halign: 'center'
                    pos_hint: {'center_y': 0.5, 'center_x': 0.6}
