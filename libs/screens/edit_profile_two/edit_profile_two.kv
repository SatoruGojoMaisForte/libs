#: import get_color_from_hex kivy.utils.get_color_from_hex

<EditProfileTwo>:
    name: 'EditProfileTwo'
    md_bg_color: 1, 1, 1, 1

    MDFloatLayout:
        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'top': 1}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDLabel:
                    text: 'Meu Perfil'
                    font_style: 'Headline'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    role: 'medium'
                    bold: False
                    pos_hint: {'center_x': 0.2}
                    halign: 'center'

        MDBoxLayout:
            size_hint: 0.8, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.81}

            MDRelativeLayout:

                MDLabel:
                    text: 'Resumo dos Dados'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True
                    font_style: 'Title'
                    role: 'large'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    halign: 'left'

                MDLabel:
                    text: 'Confirme suas informações profissionais'
                    theme_text_color: 'Custom'
                    text_color: 'grey'
                    font_style: 'Title'
                    role: 'small'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.35}
                    halign: 'left'

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 0.8, 0.05
            pos_hint: {'center_x': 0.5, 'center_y': 0.73}

            MDIcon:
                icon: 'bag-checked'
                theme_icon_color: 'Custom'
                icon_color: 'black'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDLabel:
                text: 'Profissão'
                theme_text_color: 'Custom'
                text_color: 'black'
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDCard:
            id: card_function
            size_hint: 0.8, 0.07
            height: self.width
            pos_hint: {'center_x': 0.5, 'center_y': 0.67}
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#00b894')
            on_release: root.menu2.open()

            MDRelativeLayout:
                MDLabel:
                    id: function
                    text: 'Selecione uma profissão'
                    theme_text_color: 'Custom'
                    bold: True
                    text_color: 'white'
                    halign: 'left'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.5}

                MDIcon:
                    icon: 'arrow-down'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    pos_hint: {'center_x': 0.9, 'center_y': 0.5}

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 0.8, 0.05

            pos_hint: {'center_x': 0.5, 'center_y': 0.58}

            MDIcon:
                icon: 'map-marker-outline'
                theme_icon_color: 'Custom'
                icon_color: 'black'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDLabel:
                text: 'Localização'
                theme_text_color: 'Custom'
                text_color: 'black'
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDCard:
            id: card_state
            size_hint: 0.8, 0.07
            height: self.width
            pos_hint: {'center_x': 0.5, 'center_y': 0.52}
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#00b894')
            on_release: root.menu.open()

            MDRelativeLayout:
                MDLabel:
                    id: state
                    text: 'Selecione um Estado'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    bold: True
                    halign: 'left'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.5}

                MDIcon:
                    icon: 'arrow-down'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    pos_hint: {'center_x': 0.9, 'center_y': 0.5}

        MDCard:
            id: card_city
            size_hint: 0.8, 0.07
            height: self.width
            pos_hint: {'center_x': 0.5, 'center_y': 0.44}
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#00b894')
            on_release: root.menu_city.open()

            MDRelativeLayout:
                MDLabel:
                    id: city
                    text: 'Selecione uma Cidade'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    bold: True
                    halign: 'left'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.5}

                MDIcon:
                    icon: 'arrow-down'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    pos_hint: {'center_x': 0.9, 'center_y': 0.5}

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 0.8, 0.05
            spacing: 2
            pos_hint: {'center_x': 0.5, 'center_y': 0.37}

            MDIcon:
                icon: 'microsoft'
                theme_icon_color: 'Custom'
                icon_color: 'black'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDLabel:
                text: 'Empresa'
                theme_text_color: 'Custom'
                text_color: 'black'
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDTextField:
            id: company
            mode: 'outlined'
            size_hint: 0.8, None
            radius: [15,]
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            height: '50dp'
            theme_text_color: 'Custom'
            text_color_focus: 'black'
            text_color_normal: 'black'
            theme_line_color: 'Custom'
            line_color_focus: get_color_from_hex('#00b894')
            line_color_normal: 'grey'

            MDTextFieldLeadingIcon:
                icon: "google"
                theme_icon_color: "Custom"
                icon_color_normal: 'black'
                icon_color_focus: get_color_from_hex('#00b894')

            MDTextFieldHintText:
                text: 'Nome da empresa'
                theme_text_color: 'Custom'
                text_color_normal: 'black'

        MDBoxLayout:
            size_hint: 0.8, 0.07
            pos_hint: {'center_x': 0.5, 'center_y': 0.18}
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1

            MDCard:
                theme_bg_color: 'Custom'
                md_bg_color: get_color_from_hex('#00b894')
                size_hint: 1, 1
                on_release: root.step_one()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Editar Perfil'
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        bold: True
                        halign: 'center'
                        pos_hint: {'center_x': 0.53 ,'center_y': 0.5}

                    MDIcon:
                        icon: 'border-color'
                        theme_icon_color: 'Custom'
                        icon_color: 'white'
                        pos_hint: {'center_x': 0.3 ,'center_y': 0.5}

        MDBoxLayout:
            size_hint: 0.8, 0.07
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.095}

            MDCard:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                theme_line_color: 'Custom'
                line_color: get_color_from_hex('#00b894')
                size_hint: 1, 1
                on_release: root.previous()

                MDRelativeLayout:
                    MDLabel:
                        text: 'etapa anterior'
                        theme_text_color: 'Custom'
                        text_color: get_color_from_hex('#00b894')
                        bold: True
                        halign: 'center'
                        pos_hint: {'center_x': 0.53 ,'center_y': 0.5}

                    MDIcon:
                        icon: 'arrow-left-thin'
                        theme_icon_color: 'Custom'
                        icon_color: get_color_from_hex('#00b894')
                        pos_hint: {'center_x': 0.3 ,'center_y': 0.5}