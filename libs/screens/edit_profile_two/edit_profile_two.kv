<EditProfileTwo>:
    name: 'EditProfileTwo'
    md_bg_color: 1, 1, 1, 1

    ScrollView:
        id: scroll
        do_scroll_x: False
        do_scroll_y: True

        BoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"

            MDCard:
                size_hint: 1, None
                height: "60dp"  # Altura fixa
                theme_bg_color: 'Custom'
                md_bg_color: 0, 0, 0, 0

                MDRelativeLayout:
                    MDIconButton:
                        icon: 'arrow-left'
                        theme_font_size: 'Custom'
                        font_size: '37dp'
                        theme_icon_color: 'Custom'
                        icon_color: 'black'
                        pos_hint: {'center_x': 0.1, 'center_y': 0.6}
                        on_release: root.previous()

                    MDLabel:
                        text: 'Editar Perfil'
                        font_style: 'Headline'
                        role: 'medium'
                        bold: True
                        halign: 'center'

            MDCard:
                size_hint: 1, None
                height: "170dp"  # Altura fixa
                theme_bg_color: 'Custom'
                padding: [0, -20, 0, 0]
                spacing: 10
                md_bg_color: 1, 1, 1, 1

                MDRelativeLayout:
                    MDCard:
                        id: card_state
                        style: 'elevated'
                        height: '60dp'
                        size_hint: 0.47, 1
                        theme_shadow_color: 'Custom'
                        shadow_color: 'black'
                        theme_line_color: 'Custom'
                        line_color: 'grey'
                        theme_bg_color: 'Custom'
                        md_bg_color: 'white'
                        pos_hint: {'center_y': 0.5}
                        on_release: root.menu.open()

                        MDRelativeLayout:
                            MDLabel:
                                text: 'Estado'
                                font_style: 'Headline'
                                role: 'small'
                                bold: True
                                halign: 'center'
                                pos_hint: {'center_x': 0.5, 'center_y': 0.85}

                            AsyncImage:
                                source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1735942826/estado-fotor-20250103191952_nbunkd.jpg'
                                size_hint: 0.58, 0.58
                                pos_hint: {'center_x': 0.5, 'center_y': 0.43}

                            MDLabel:
                                id: state
                                text: 'Ausente'
                                font_style: 'Label'
                                role: 'large'
                                bold: 'True'
                                theme_text_color: 'Custom'
                                text_color: 'red'
                                halign: 'center'
                                pos_hint: {'center_x': 0.5, 'center_y': 0.06}

                    MDCard:
                        id: card_city
                        style: 'elevated'
                        size_hint: 0.47, 1
                        theme_shadow_color: 'Custom'
                        shadow_color: 'black'
                        theme_line_color: 'Custom'
                        line_color: 'grey'
                        theme_bg_color: 'Custom'
                        md_bg_color: 'white'
                        pos_hint: {'center_x': 0.74, 'center_y': 0.5}
                        on_release: root.menu_city.open()

                        MDRelativeLayout:

                            MDLabel:
                                text: 'Cidade'
                                font_style: 'Headline'
                                role: 'small'
                                bold: True
                                halign: 'center'
                                pos_hint: {'center_x': 0.5, 'center_y': 0.85}

                            AsyncImage:
                                source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1735942044/image_m5awuj.png'
                                size_hint: 0.58, 0.58
                                pos_hint: {'center_x': 0.5, 'center_y': 0.46}

                            MDLabel:
                                id: city
                                text: 'Ausente'
                                font_style: 'Label'
                                role: 'large'
                                bold: 'True'
                                theme_text_color: 'Custom'
                                text_color: 'red'
                                halign: 'center'
                                pos_hint: {'center_x': 0.5, 'center_y': 0.1}

            MDCard:
                size_hint: 0.95, 0.1
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                height: '60dp'

                pos_hint: {'center_x': 0.5, 'center_y': 0.36}

                MDRelativeLayout:
                    MDTextField:
                        id: company
                        size_hint: 1, 0.9
                        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                        theme_text_color: 'Custom'
                        text_color_normal: 'black'
                        radius: [15,]

                        MDTextFieldHintText:
                            text: 'Empresa'

                    MDLabel:
                        id: erro3
                        text: ''
                        halign: 'right'
                        theme_text_color: 'Custom'
                        text_color: 'red'
                        font_style: 'Title'
                        role: 'small'
                        pos_hint: {'center_x': 0.44, 'center_y': 0.1}



            MDCard:
                style: 'elevated'
                size_hint: 0.95, None
                height: "60dp"  # Altura fixa
                theme_bg_color: 'Custom'

                pos_hint: {'center_x': 0.5}
                md_bg_color: 'black'
                theme_shadow_color: 'Custom'
                shadow_color: 'orange'
                theme_shadow_offset: "Custom"
                shadow_offset: (1, -2)
                theme_shadow_softness: "Custom"
                shadow_softness: 1
                theme_elevation_level: "Custom"
                elevation_level: 2
                md_bg_color_disabled: "grey"
                on_release: root.step_one()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Atualizar dados'
                        halign: 'center'
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        bold: True


