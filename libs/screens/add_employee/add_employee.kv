<AddEmployee>:
    name: 'Add'
    md_bg_color: (0.96, 0.97, 0.97, 0.97)

    FloatLayout:
        id: principal

        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: '37dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}
                    on_release: root.back_table()

                MDLabel:
                    text: 'Novo funcionario'
                    font_style: 'Headline'
                    role: 'medium'
                    pos_hint: {'center_x': 0.2}
                    halign: 'center'


        MDDivider:
            size_hint_x: 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}


        BoxLayout:
            size_hint: 1, None
            height: "170dp"
            spacing: 10
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            padding: [5, -20, 15, 0]

            MDCard:
                id: card_salary
                style: 'elevated'
                theme_line_color: 'Custom'
                line_color: 'black'
                size_hint: 0.45, 1.05
                theme_bg_color: 'Custom'
                md_bg_color: 'white'  # Cor padrão
                md_bg_color_disabled: "white"  # Cor quando desabilitado
                md_bg_color_pressed: "white"  # Cor quando pressionado
                on_release: root.menu.open()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Salario'
                        font_style: 'Headline'
                        role: 'small'
                        bold: True
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.85}

                    AsyncImage:
                        source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1738954596/panda-removebg-preview_cxkiwd.png'
                        size_hint: 0.75, 0.75
                        pos_hint: {'center_x': 0.5, 'center_y': 0.43}

                    MDLabel:
                        id: salary
                        text: 'Ausente'
                        font_style: 'Label'
                        role: 'large'
                        bold: 'True'
                        theme_text_color: 'Custom'
                        text_color: 'red'
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.1}

            MDCard:
                id: card_function
                style: 'elevated'
                theme_line_color: 'Custom'
                line_color: 'black'
                size_hint: 0.45, 1.05
                theme_bg_color: 'Custom'
                md_bg_color: 'white'  # Cor padrão
                md_bg_color_disabled: "white"  # Cor quando desabilitado
                md_bg_color_pressed: "white"  # Cor quando pressionado

                on_release: root.menu2.open()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Função'
                        font_style: 'Headline'
                        role: 'small'
                        bold: True
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.85}

                    AsyncImage:
                        source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1738956338/pandass-removebg-preview_c5iod1.png'
                        size_hint: 0.7, 0.7
                        pos_hint: {'center_x': 0.5, 'center_y': 0.46}

                    MDLabel:
                        id: function
                        text: 'Ausente'
                        font_style: 'Label'
                        role: 'large'
                        bold: 'True'
                        theme_text_color: 'Custom'
                        text_color: 'red'
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.1}

        MDTextField:
            id: name
            mode: 'filled'
            size_hint: 1, None
            theme_line_color: 'Custom'
            line_color_focus: 'blue'
            theme_bg_color: 'Custom'
            fill_color_normal: 1, 1, 1, 1
            fill_color_focus: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDTextFieldHintText:
                text: 'Nome'
                theme_text_color: 'Custom'
                text_color: 'grey'


        MDCard:
            size_hint: 0.95, 0.08
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            theme_bg_color: 'Custom'
            md_bg_color: (0.85, 0.85, 0.85, 0.85)  # Cinza médio
            on_release: root.checking_empty_fields()

            MDRelativeLayout:
                MDIconButton:
                    icon:  "check-circle-outline"
                    theme_icon_color: 'Custom'
                    icon_color: 'green'
                    pos_hint: {'center_x': 0.2, 'center_y': 0.55}

                MDLabel:
                    text: 'Adicionar novo funcionario'
                    theme_text_color: 'Custom'
                    text_color: 'green'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.5}
                    halign: 'center'
