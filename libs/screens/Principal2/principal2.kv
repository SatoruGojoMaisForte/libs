MDLabel:
            text: "Junte-se a nós! Cadastre-se agora e desbloqueie uma experiência única e personalizada."
            size_hint: None, None
            size: "380dp", "150dp"
            font_style: "Title"
            role: "small"
            pos_hint: {"center_x": 0.53, "center_y": 0.8}
            halign: "left"

        MDCard:
            size_hint: None, None
            size: 62, 100
            elevation: 0
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1

            MDRelativeLayout:
                MDTextField:
                    id: nome
                    theme_line_color: 'Custom'
                    line_color_normal: 'black'
                    pos_hint: {"center_y": 0.69, "center_x": 0.5}
                    size_hint: 0.8, None
                    icon_right: "account"
                    mode: "outlined"
                    #radius: 30, 30

                    MDTextFieldLeadingIcon:
                        icon: "account-circle-outline"
                        theme_icon_color: 'Custom'
                        icon_color_normal: 'black'
                        icon_color_focus: 'black'
                    MDTextFieldHintText:
                        text: 'Nome do usuario'

                MDLabel:
                    id: erro_nome
                    text: 'tamanho não permitido'
                    font_style: 'Title'
                    role: 'small'
                    theme_text_color: 'Custom'
                    pos_hint: {'center_y': 0.63, 'center_x': 0.58}

        MDTextField:
            id: email
            theme_line_color: 'Custom'
            line_color_normal: 'black'
            theme_bg_color: "Custom"
            md_bg_color: 0, 1, 1, 1
            pos_hint: {"center_y": 0.57, "center_x": 0.46}
            size_hint: 0.8, None
            icon_right: "account"
            mode: "outlined"
            #radius: 30, 30

            MDTextFieldLeadingIcon:
                icon: "email"
                theme_icon_color: 'Custom'
                icon_color_normal: 'black'
                icon_color_focus: 'black'

            MDTextFieldHintText:
                text: 'Email'

        MDLabel:
            id: erro_email
            text: ''
            font_style: 'Title'
            role: 'small'
            theme_text_color: 'Custom'
            pos_hint: {'center_y': 0.51, 'center_x': 0.58}

        MDTextField:
            id: senha
            theme_line_color: 'Custom'
            line_color_normal: 'black'
            pos_hint: {"center_y": 0.45, "center_x": 0.46}
            size_hint: 0.8, None
            icon_right: "account"
            mode: "outlined"
            #radius: 30, 30

            MDTextFieldLeadingIcon:
                icon: "lock"
                theme_icon_color: 'Custom'
                icon_color_normal: 'black'
                icon_color_focus: 'black'

            MDTextFieldHintText:
                text: 'Senha'

        MDLabel:
            id: erro_senha
            text: ''
            font_style: 'Title'
            role: 'small'
            theme_text_color: 'Custom'
            pos_hint: {'center_y': 0.39, 'center_x': 0.58}

        MDCard:
            style: 'elevated'
            size_hint: None, None
            size: "320", "55dp"
            pos_hint: {"center_y": 0.33, "center_x": 0.46}
            padding: "16dp"
            size_hint: None, None
            # Sets custom properties.
            theme_shadow_color: "Custom"
            shadow_color: "black"
            theme_bg_color: "Custom"
            md_bg_color: 1, 0, 1, 0
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.logica()

            radius: [15]

            BoxLayout:  # Usa BoxLayout para controlar o layout interno do card
                size_hint: 1, 1
                orientation: 'vertical'
                padding: 0
                spacing: 0

                MDLabel:
                    text: "Cadastrar"
                    theme_text_color: "Custom"
                    text_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    halign: 'center'
                    font_style: "Title"
                    bold: True
                    role: "medium"



        MDLabel:
            text: 'ou'
            font_style: 'Title'
            role: 'medium'
            theme_text_color: 'Custom'
            bold: True
            pos_hint: {'center_y': 0.23, 'center_x': 0.94}

        MDButton:
            style: "text"
            pos_hint: {'center_y': 0.17, "center_x": 0.47}
            on_release: root.voltar()


            MDButtonText:
                text: "Fazer Login"
                theme_text_color: "Custom"
                text_color:"white" if root.theme_cls.theme_style == "Dark" else "black"
                font_style: "Title"
                bold: True
                role: "small"