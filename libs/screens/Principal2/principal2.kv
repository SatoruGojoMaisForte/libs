<Cadastro>:
    name: 'cadastro'
    md_bg_color: 0, 0, 0, 1

    MDBoxLayout:
        orientantion: 'vertical'

        FloatLayout:
            MDBoxLayout:
                pos_hint: {'center_x': 0.5, 'center_y':.1}
                orientation: 'vertical'
                adaptive_height: True
                spacing: 15

                MDBoxLayout:
                    orientation: 'vertical'

                    MDLabel:
                        text:'Criar uma conta'
                        font_style: 'Display'
                        halign: 'center'
                        role: 'small'
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        bold: True
                        pos_hint: {'center_y': 0.20, 'center_x': 0.38}

                    MDLabel:
                        text: "Junte-se a nós! Cadastre-se agora e desbloqueie uma experiência única e personalizada."
                        size_hint: None, None
                        size: "380dp", "150dp"
                        font_style: "Title"
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        role: "small"
                        pos_hint: {"center_x": 0.53, "center_y": 0.1}
                        halign: "left"
                        spacing: 10

            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True

                MDCard:
                    size_hint: None, None
                    size: 360, 75
                    elevation: 0
                    adaptive_height: True

                    theme_bg_color: 'Custom'
                    pos_hint: {"center_y": 1, "center_x": 0.5}
                    halign: 'left'
                    md_bg_color: 0, 0, 0, 1

                    MDRelativeLayout:
                        MDTextField:
                            id: nome
                            theme_line_color: 'Custom'
                            line_color_normal: 'white'
                            line_color_focus: 'yellow'
                            theme_text_color: 'Custom'
                            text_color_focus: 'white'
                            text_color_normal: 'yellow'
                            pos_hint: {"center_y": 1, "center_x": 0.5}
                            size_hint: 1, None
                            icon_right: "account"
                            mode: "outlined"
                            #radius: 30, 30

                            MDTextFieldLeadingIcon:
                                icon: "account-circle-outline"
                                theme_icon_color: 'Custom'
                                icon_color_normal: 'white'
                                icon_color_focus: 'yellow'

                            MDTextFieldHintText:
                                theme_text_color: 'Custom'
                                text_color_normal: 'white'
                                text_color_focus: 'yellow'
                                text: 'Nome do usuario'

                        MDLabel:
                            id: erro_nome
                            text: 'tamanho não permitido'
                            font_style: 'Title'
                            role: 'small'
                            theme_text_color: 'Custom'
                            halign: 'right'
                            pos_hint: {'center_y': 0.45}
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True

                MDCard:
                    size_hint: None, None
                    size: 360, 75
                    elevation: 0
                    adaptive_height: True

                    theme_bg_color: 'Custom'
                    pos_hint: {"center_y": 1, "center_x": 0.5}
                    halign: 'left'
                    md_bg_color: 0, 0, 0, 1

                    MDRelativeLayout:
                        MDTextField:
                            id: email
                            theme_line_color: 'Custom'
                            line_color_normal: 'white'
                            theme_text_color: 'Custom'
                            text_color_focus: 'white'
                            text_color_normal: 'yellow'
                            line_color_focus: 'yellow'
                            theme_bg_color: "Custom"
                            md_bg_color: 0, 1, 1, 1
                            pos_hint: {"center_y": 1, "center_x": 0.5}
                            size_hint: 1, None
                            icon_right: "account"
                            mode: "outlined"
                            #radius: 30, 30

                            MDTextFieldLeadingIcon:
                                icon: "email"
                                theme_icon_color: 'Custom'
                                icon_color_normal: 'white'
                                icon_color_focus: 'yellow'

                            MDTextFieldHintText:
                                theme_text_color: 'Custom'
                                text_color_normal: 'white'
                                text_color_focus: 'yellow'
                                text: 'Email'

                        MDLabel:
                            id: erro_email
                            text: 'erro'
                            font_style: 'Title'
                            role: 'small'
                            theme_text_color: 'Custom'
                            halign: 'right'
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True

                MDCard:
                    size_hint: None, None
                    size: 360, 75
                    elevation: 0
                    adaptive_height: True

                    theme_bg_color: 'Custom'
                    pos_hint: {"center_y": 1, "center_x": 0.5}
                    halign: 'left'
                    md_bg_color: 0, 0, 0, 1

                    MDRelativeLayout:

                        MDTextField:
                            id: senha
                            theme_line_color: 'Custom'
                            line_color_normal: 'white'
                            line_color_focus: 'yellow'
                            theme_text_color: 'Custom'
                            text_color_focus: 'white'
                            text_color_normal: 'yellow'
                            pos_hint: {"center_y": 1, "center_x": 0.5}
                            size_hint: 1, None
                            icon_right: "account"
                            mode: "outlined"
                            #radius: 30, 30

                            MDTextFieldLeadingIcon:
                                icon: "lock"
                                theme_icon_color: 'Custom'
                                icon_color_normal: 'white'
                                icon_color_focus: 'yellow'

                            MDTextFieldHintText:
                                theme_text_color: 'Custom'
                                text_color_normal: 'white'
                                text_color_focus: 'yellow'
                                text: 'Senha'

                        MDLabel:
                            id: erro_senha
                            text: 'ta errado isso ai'
                            font_style: 'Title'
                            role: 'small'
                            theme_text_color: 'Custom'
                            halign: 'right'
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                MDCard:
                    style: 'elevated'

                    size_hint: None, None
                    size: "360", "55dp"
                    pos_hint: {"center_y": 1, "center_x": 0.5}
                    padding: "16dp"
                    size_hint: None, None
                    # Sets custom properties.
                    theme_shadow_color: "Custom"
                    shadow_color: "yellow"
                    theme_bg_color: "Custom"
                    md_bg_color: 0, 0, 0, 1
                    md_bg_color_disabled: "grey"
                    theme_shadow_offset: "Custom"
                    shadow_offset: (1, -2)
                    theme_shadow_softness: "Custom"
                    shadow_softness: 1
                    theme_elevation_level: "Custom"
                    elevation_level: 2
                    on_release: root.logica()

                    radius: [15]

                    BoxLayout:  # Usa BoxLayout para controlar o layout interno do card
                        size_hint: 1, 1
                        orientation: 'vertical'
                        padding: 0
                        spacing: 0

                        MDLabel:
                            text: "Cadastrar"
                            theme_text_color: "Custom"
                            text_color: "yellow"
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            halign: 'center'
                            font_style: "Title"
                            bold: True
                            role: "medium"
            MDLabel:
                text: ''
