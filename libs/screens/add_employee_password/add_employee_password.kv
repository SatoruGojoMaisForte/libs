<AddEmployeePassword>:
    name: 'AddEmployeePassword'
    md_bg_color: 'white'

    FloatLayout:
        AsyncImage:
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1746414155/ChatGPT_Image_5_de_mai._de_2025__00_01_25-removebg-preview_dgtktx.png'
            size_hint: 0.4, 0.4
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}

        MDBoxLayout:
            size_hint: 1, 0.12
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}
            MDRelativeLayout:

                MDLabel:
                    text: 'Criar Senha'
                    bold: True
                    theme_font_size: 'Custom'
                    font_size: '23sp'
                    halign: 'center'
                    pos_hint: {'center_y': 0.8, 'center_x': 0.5}

                MDLabel:
                    text: 'Defina uma senha de acesso à conta. Ela será \nutilizada pelo funcionário para acessar o sistema'
                    theme_text_color: 'Custom'
                    text_color: 'grey'
                    theme_font_size: 'Custom'
                    font_size: '12sp'
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.25}

        MDBoxLayout:
            size_hint: 1, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: 'white'
            padding: [30, 0, 30, 0]
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}

            MDRelativeLayout:
                MDTextField:
                    id: password
                    theme_line_color: "Custom"
                    line_color_focus: "blue"
                    theme_bg_color: "Custom"
                    fill_color_normal: 'white'
                    fill_color_focus: 'white'
                    size_hint: 1, 1
                    mode: "filled"

                    MDTextFieldLeadingIcon:
                        icon: "lock"

                    MDTextFieldHintText:
                        text: "Digite a senha"

                    MDTextFieldHelperText:
                        text: "Coloque uma senha segura minimo 8 caracteres"
                        mode: "persistent"
                        theme_text_color: 'Custom'
                        text_color: 'grey'
                        bold: True

        MDCard:
            theme_bg_color: 'Custom'
            padding: [8, 10, 8, 0]
            size_hint: 0.45, 0.07
            md_bg_color: get_color_from_hex('#197BBD')
            pos_hint: {'center_x': 0.27, 'top': 0.25}
            spacing: 5
            on_release: root.back_table()

            MDRelativeLayout:
                MDIcon:
                    icon: 'arrow-left'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    pos_hint: {'center_x': .1, 'center_y': 0.63}

                MDLabel:
                    text: 'tela anterior'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    halign: 'center'
                    font_style: 'Title'
                    role: 'medium'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.55}

        MDCard:
            theme_bg_color: 'Custom'
            padding: [8, 10, 8, 0]
            size_hint: 0.45, 0.07
            md_bg_color: get_color_from_hex('#197BBD')
            pos_hint: {'center_x': 0.73, 'top': 0.25}
            spacing: 5
            on_release: root.hashed_password()

            MDRelativeLayout:
                MDIcon:
                    icon: 'content-save'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    pos_hint: {'center_x': .1, 'center_y': 0.63}

                MDLabel:
                    text: 'Proxima tela'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    halign: 'center'
                    font_style: 'Title'
                    role: 'medium'
                    pos_hint: {'center_x': 0.6, 'center_y': 0.55}
