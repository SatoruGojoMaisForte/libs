#: import NavigationsButtons libs.components.navigation_buttons.NavigationsButtons

<TableScreen>:
    name: 'Table'
    md_bg_color: (0.96, 0.97, 0.97, 0.97)

    FloatLayout:
        id: principal

        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]
                MDIconButton:
                    icon: 'account-group'
                    theme_font_size: 'Custom'
                    font_size: '37dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}

                MDLabel:
                    text: 'Funcionarios'
                    font_style: 'Headline'
                    role: 'medium'
                    bold: True
                    pos_hint: {'center_x': 0.2}
                    halign: 'center'

        MDLabel:
            id: counter
            text: f'{root.cont} funcionarios contratados'
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 'grey'
            pos_hint: {'center_x': 0.5, 'center_y': 0.87}

        ScrollView:
            do_scroll_x: False
            size_hint: 1, 0.75
            pos_hint: {'center_x': 0.5, 'center_y': 0.47}

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0  # Cor de fundo (cinza escuro)
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDBoxLayout:
                id: main_scroll
                orientation: "vertical"
                adaptive_height: True
                height: self.minimum_height

                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: 5
                    size_hint_y: None
                    height: self.minimum_height

        MDIconButton:
            icon: "plus"
            style: "tonal"
            theme_font_size: "Custom"
            font_size: "48sp"
            radius: [self.height / 2, ]
            size_hint: None, None
            size: "55dp", "55dp"
            theme_icon_color: 'Custom'
            icon_color: 'white'
            theme_bg_color: 'Custom'
            md_bg_color: 0, 0, 1, 1
            pos_hint: {'center_x': 0.85, 'center_y': 0.2}
            on_release: root.add_screen()

    NavigationsButtons:
        id: navigation
        nome: root.username
        table: root.table