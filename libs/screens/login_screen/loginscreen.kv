<LoginScreen>:
    name: "Login"
    md_bg_color: self.theme_cls.backgroundColor

    FloatLayout:
        MDButton:
            style: "text"
            pos_hint: {"top": 0.99, "center_x": 0.8}

            MDButtonText:
                text: "Create account"
                theme_text_color: "Custom"
                text_color:"white" if root.theme_cls.theme_style == "Dark" else "black"
                font_style: "Title"
                role: "small"

        MDLabel:
            text: "Login"
            bold: True
            font_style: "Display"
            role: "small"
            halign: "center"
            pos_hint: {"center_y": 0.85, "center_x": 0.5}

        MDLabel:
            text: "Por favor, insira suas informações abaixo para fazer login na sua conta."
            halign: "center"
            font_style: "Title"
            role: "small"
            size_hint: 0.8, None
            size: 255, 15
            pos_hint: {'center_x': 0.5, 'center_y': 0.74}

        MDLabel:
            text: "Usuario"
            bold: True
            font_style: "Title"
            role: "medium"
            halign: "center"
            pos_hint: {"center_y": 0.65, "center_x": 0.17}

        MDTextField:
            id: usuario
            theme_line_color: 'Custom'
            line_color_normal: 'black'
            hint_text: "Usuario ou email"
            pos_hint: {"center_y": 0.59, "center_x": 0.5}
            size_hint: 0.8, None
            icon_right: "account"
            mode: "outlined"

            MDTextFieldLeadingIcon:
                icon: "account"

        MDLabel:
            id: encontrar
            text: ''
            theme_text_color: "Custom"
            text_color: 'red'
            pos_hint: {"center_y": 0.54, "center_x": 0.61}
            font_style: "Label"
            role: "small"

        MDLabel:
            id: senha_correta
            text: ''
            theme_text_color: "Custom"
            text_color: 'red'
            pos_hint: {"center_y": 0.41, "center_x": 0.62}
            font_style: "Label"
            role: "small"

        MDLabel:
            text: "Senha"
            bold: True
            font_style: "Title"
            role: "medium"
            halign: "center"
            pos_hint: {"center_y": 0.52, "center_x": 0.16}

        MDTextField:
            id: senha
            theme_line_color: 'Custom'
            line_color_normal: 'black'
            pos_hint: {"center_y": 0.46, "center_x": 0.5}
            color_mode: 'custom'
            size_hint: None, None
            mode: "outlined"
            size_hint: 0.8, None
            icon_right: "lock"
            foreground_color_focus: 0, 1, 1, 1
            password: True

            MDTextFieldLeadingIcon:
                icon: 'lock'

        MDButton:
            style: "text"
            pos_hint: {"center_y": 0.40, "center_x": 0.74}
            on_release: root.chamar_trocar()


            MDButtonText:
                text: "Esqueceu a senha?"
                theme_text_color: "Custom"
                text_color:"white" if root.theme_cls.theme_style == "Dark" else "black"
                font_style: "Title"
                role: "small"

        MDCard:
            style: 'elevated'
            size_hint: None, None
            size: "320", "55dp"
            pos_hint: {"center_y": 0.32, "center_x": 0.5}
            padding: "16dp"
            size_hint: None, None
            # Sets custom properties.
            theme_shadow_color: "Custom"
            shadow_color: "black"
            theme_bg_color: "Custom"
            md_bg_color: 1, 0, 1, 0
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.focus()

            radius: [15]

            BoxLayout:  # Usa BoxLayout para controlar o layout interno do card
                size_hint: 1, 1
                orientation: 'horizontal'
                padding: 0
                spacing: 0

                MDLabel:
                    text: "Entrar"
                    theme_text_color: "Custom"
                    text_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    halign: 'center'
                    font_style: "Title"
                    bold: True
                    role: "medium"


        MDLabel:
            text: "ou utilize uma conta de rede social"
            font_style: "Title"
            role: "small"
            pos_hint: {"center_y": 0.24}
            halign: "center"


        MDCard:
            size_hint: None, None
            size: "50dp", "50dp"
            pos_hint: {"center_x": 0.25, "center_y": 0.15}

            AsyncImage:
                source: "https://raw.githubusercontent.com/SatoruGojoMaisForte/logos/main/Images/Logo_google/logo_google.png"
                allow_stretch: True

        MDCard:
            size_hint: None, None
            size: "50dp", "50dp"
            pos_hint: {"center_x": 0.48, "center_y": 0.15}
            on_release: root.click()

            AsyncImage:
                source: "https://raw.githubusercontent.com/SatoruGojoMaisForte/logos/main/Images/Logo_facebook/logo_facebook.png"
                allow_stretch: True

        MDCard:
            size_hint: None, None
            size: "50dp", "50dp"
            pos_hint: {"center_x": 0.73, "center_y": 0.15}
            on_release: root.click()

            AsyncImage:
                source: "https://raw.githubusercontent.com/SatoruGojoMaisForte/logos/main/Images/Logo_twitter/logo_twitter.png"
                allow_stretch: True
