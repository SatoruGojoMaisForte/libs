<CheckCode>:
    name: 'Check'
    md_bg_color: root.color_background()

    FloatLayout:

        MDCard:
            style: 'elevated'
            size_hint: None, None
            size: "40", "40dp"
            pos_hint: {"center_y": 0.95, "center_x": 0.07}
            padding: "16dp"
            size_hint: None, None
            # Sets custom properties.
            theme_shadow_color: "Custom"
            shadow_color: "white"
            theme_bg_color: "Custom"
            md_bg_color: 1, 1, 1, 1
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            radius: [50]

            RelativeLayout:
                MDIconButton:
                    icon: 'arrow-left'
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint: None, None
                    halign: 'center'
                    size: '50dp', '50dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    on_release: root.call_send_code()

        MDLabel:
            text: "Aplicativo de verificação"
            bold: True
            font_style: 'Headline'
            role: 'small'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.94}

        AsyncImage:
            id: icon
            source: root.icon_tema()
            size_hint: None, None
            size: "200dp", "150dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            allow_stretch: True

        MDLabel:
            text: 'Insira seu codigo de verificação'
            bold: True
            size_hint: None, None
            size: "200dp", "100dp"
            font_style: "Title"
            role: "large"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            halign: "center"

        MDLabel:
            text: 'Insira o codigo de verificação, enviado pelo email, na proxima tela para concluir a verificação'
            size_hint: None, None
            size: "320dp", "150dp"
            font_style: "Body"
            role: "medium"
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            halign: "center"


        MDCard:
            style: 'elevated'
            size_hint: 0.8, 0.07
            pos_hint: {"center_y": 0.2, "center_x": 0.5}
            padding: "16dp"
            # Sets custom properties.
            theme_shadow_color: "Custom"
            shadow_color: "black"
            theme_bg_color: "Custom"
            md_bg_color: (0.03, 0.4, 1)
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            on_release: root.call_write_code()

            radius: [15]

            BoxLayout:  # Usa BoxLayout para controlar o layout interno do card
                size_hint: 1, 1
                orientation: 'horizontal'
                padding: 0
                spacing: 0

                MDLabel:
                    text: "Avançar"
                    theme_text_color: "Custom"
                    text_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    halign: 'center'
                    font_style: "Title"
                    bold: True
                    role: "medium"

