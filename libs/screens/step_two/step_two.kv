<StepTwo>:
    name: 'StepTwo'
    # Define o canvas no nível do EditarScreen
    canvas.before:
        Rectangle:
            source: "icones/bg1.png"
            size: self.size
            pos: self.pos

    FloatLayout:
        Image:
            source: "icones/gradient.png"  # Caminho para a imagem
            allow_stretch: True
            keep_ratio: False  # Faz a imagem se ajustar completamente
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDIconButton:
            on_release: root.page_return()
            icon: 'arrow-left'
            theme_font_size: 'Custom'
            font_size: '40dp'
            theme_icon_color: 'Custom'
            icon_color: "white"
            pos_hint: {'center_y': 0.95, 'center_x': 0.1}

        MDCard:
            size_hint: 0.9, 0.45
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDRelativeLayout:
                MDLabel:
                    text: 'Etapa 2'
                    font_style: 'Headline'
                    halign: 'center'
                    role: 'small'
                    pos_hint: {'center_y': 0.8, 'center_x': 0.5}

                MDCard:
                    pos_hint: {'center_y': 0.4, 'center_x': 0.28}
                    theme_bg_color: 'Custom'
                    md_bg_color_disable: 'white'
                    md_bg_color: 1, 1, 1, 1
                    size_hint: 0.3, 0.2

                    MDRelativeLayout:
                        MDLabel:
                            text: 'Idade'
                            halign: 'left'
                            pos_hint: {"center_x": .5, "center_y": 0.7}

                        MDDropDownItem:
                            pos_hint: {'left': 0.5, "center_y": .3}
                            on_release: root.open_menu(self)


                            MDDropDownItemText:
                                id: drop_text
                                text: "Idade"
                                theme_text_color: 'Custom'

                MDCard:
                    pos_hint: {'center_y': 0.4, 'center_x': 0.7}
                    theme_bg_color: 'Custom'
                    md_bg_color_disable: 'white'
                    md_bg_color: 1, 1, 1, 1
                    size_hint: 0.5, 0.25

                    MDRelativeLayout:
                        MDLabel:
                            text: 'Data de contratação'
                            halign: 'left'
                            pos_hint: {"center_x": .5, "center_y": 0.7}

                        MDCard:
                            pos_hint: {'center_y': 0.25, 'center_x': 0.45}
                            theme_bg_color: 'Custom'
                            md_bg_color_disable: 'white'
                            theme_line_color: 'Custom'
                            line_color: 'black'
                            md_bg_color: 1, 1, 1, 1
                            size_hint: 0.85, 0.5
                            on_release: root.show_modal_date_picker()

                            MDRelativeLayout:
                                MDLabel:
                                    id: contratar
                                    text: 'Selecionar'
                                    font_style: 'Title'
                                    theme_text_color: 'Custom'
                                    role: 'small'
                                    halign: 'center'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDCard:
                    pos_hint: {'center_y': 0.6, 'center_x': 0.5}
                    theme_bg_color: 'Custom'
                    md_bg_color_disable: 'white'
                    md_bg_color: 1, 1, 1, 1
                    size_hint: 0.75, 0.2

                    MDRelativeLayout:
                        MDTextField:
                            id: pix
                            mode: "outlined"
                            size_hint: 1, None
                            theme_line_color: 'Custom'
                            line_color_normal: 'grey'
                            pos_hint: {'center_y': 0.6, 'center_x': 0.5}
                            radius: [15,]
                            MDTextFieldHintText:
                                text: 'Pix do funcionario'

                MDCard:
                    style: 'elevated'
                    size_hint: 0.75, 0.15
                    pos_hint: {'center_y': 0.12, 'center_x': 0.5}
                    theme_shadow_color: "Custom"
                    shadow_color: "brown"
                    theme_bg_color: "Custom"
                    md_bg_color: "black"
                    md_bg_color_disabled: "grey"
                    theme_shadow_offset: "Custom"
                    shadow_offset: (1, -2)
                    theme_shadow_softness: "Custom"
                    shadow_softness: 1
                    theme_elevation_level: "Custom"
                    elevation_level: 2
                    on_release: root.verificar()

                    MDRelativeLayout:
                        MDLabel:
                            text: 'Proxima etapa'
                            halign: 'center'
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            theme_text_color: 'Custom'
                            text_color: 'white'
                            bold: True