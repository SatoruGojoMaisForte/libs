<PermissionDenied>:
    name: 'Denied'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDLabel:
            text: 'Permissões Negadas'
            font_style: 'Headline'
            role: 'medium'
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 'red'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}

        AsyncImage:
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1736807171/sad_girl_sbkvn2.png'
            size_hint: 0.6, 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        MDLabel:
            text: 'Com as permissões necessarias não concedidas algumas das funcionalidades ficaram indisponiveis, todas estão listadas a seguir'
            theme_text_color: 'Custom'
            font_style: 'Label'
            role: 'large'
            text_color: 'grey'
            size_hint_x: None
            width: dp(270)
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.48}

        MDCard:
            size_hint: 1, 0.1
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            md_bg_color: 0, 0, 0, 0

            MDRelativeLayout:
                MDIconButton:
                    icon: 'arrow-right'
                    theme_icon_color: 'Custom'
                    icon_color: 'red'
                    pos_hint: {'center_x': 0.15, 'center_y': 0.9}

                MDLabel:
                    text: 'Funcionalidades de imagem'
                    pos_hint: {'center_x': 0.7, 'center_y': 0.89}


                MDIconButton:
                    icon: 'arrow-right'
                    theme_icon_color: 'Custom'
                    icon_color: 'red'
                    pos_hint: {'center_x': 0.15, 'center_y': 0.5}

                MDLabel:
                    text: 'Funcionalidades de Audio'
                    pos_hint: {'center_x': 0.7, 'center_y': 0.49}

                MDIconButton:
                    icon: 'arrow-right'
                    theme_icon_color: 'Custom'
                    icon_color: 'red'
                    pos_hint: {'center_x': 0.15, 'center_y': 0.1}

                MDLabel:
                    text: 'Funcionalidades de Localização'
                    pos_hint: {'center_x': 0.7, 'center_y': 0.09}

        MDButton:
            style: 'outlined'
            pos_hint: {'center_x': 0.5, 'center_y': 0.22}
            on_release: root.denied_pass()

            MDButtonText:
                text: 'Entendo, mas quero prosseguir'
                theme_text_color: 'Custom'
                text_color: 'red'

        MDLabel:
            text: 'Ou'
            halign: 'center'
            bold: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.14}

        MDButton:
            style: 'outlined'
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}
            on_release: root.confirm_permissions()
            MDButtonText:
                text: 'Ativar permissões nas configurações'
                theme_text_color: 'Custom'
                text_color: 'green'