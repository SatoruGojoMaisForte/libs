#: import Name libs.components_perfil.name.Name
#: import Seguidores libs.components_perfil.seguidores.Seguidores
#: import Seguindo libs.components_perfil.seguindo.Seguindo
#: import Publicar libs.components_perfil.publicar.Publicar
#: import Bio libs.components_perfil.bio.Bio
#: import NavigationsButtons libs.components.navigation_buttons.NavigationsButtons

<PerfilPage>:
    md_bg_color: 1, 1, 1, 1
    name: 'perfilpage'
    MDBoxLayout:
        orientation: 'vertical'

        Name:
            id: name
            name: 'Spike'

        MDBoxLayout:
            id: timeline
            orientation: 'vertical'
            adaptive_height: 'True'

            MDBoxLayout:
                adaptive_height: 'True'
                spacing: 5
                pading: 5

                FitImage:
                    size_hint: None, None
                    size: 80, 80
                    radius: [50,]
                    padding: 40
                    halign: 'left'
                    source: root.avatar


                Publicar:
                    publicar: '0'

                Seguidores:
                    id: seguir
                    seguidores: '200'

                Seguindo:
                    id: seguido
                    seguindo: '12'

        MDBoxLayout:
            adaptive_height: True
            Bio:
                id: bio
                bio: 'VocÃª deve ao mundo os seus dons so precisa aprender a usa-los'

        MDBoxLayout:
            adaptive_height: True
            spacing: 20
            MDButton:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 0.8
                MDButtonText:
                    text: 'Editar Perfil'
                    bold: True
                    theme_text_color: 'Custom'
                    text_color: 'black'

            MDButton:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 0.8
                MDButtonText:
                    text: 'Compartilhar perfil'
                    bold: True
                    theme_text_color: 'Custom'
                    text_color: 'black'

            MDIconButton:
                icon: 'cog'
                theme_icon_color: 'Custom'
                icon_color: 'black'


        MDLabel:
            text: ''

    NavigationsButtons:
        avatar: root.avatar
