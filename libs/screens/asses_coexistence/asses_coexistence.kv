<AssesCoexistence>:
    name: 'AssesCoexistence'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]
                MDIconButton:
                    icon: 'arrow-left'
                    theme_font_size: 'Custom'
                    font_size: '37dp'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.6}
                    on_release: root.back_evaluation()

                MDLabel:
                    text: 'Convivência'
                    font_style: 'Headline'
                    role: 'medium'
                    bold: True
                    pos_hint: {'center_x': 0.2}
                    halign: 'center'

        AsyncImage:
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1739818607/image_tvhost.png'
            size_hint: 0.5, 0.25
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        MDLabel:
            text: 'Em uma escala de 1 a 5, como você avaliaria a interação do seu funcionario com os colegas de trabalho?'
            theme_text_color: 'Custom'
            text_color: 'grey'
            font_style: 'Label'
            role: 'large'
            halign: 'center'
            padding: [15, 0, 15, 0]

        MDBoxLayout:
            orientation: 'horizontal'
            theme_bg_color: 'Custom'
            md_bg_color: 'white'
            size_hint: 0.8, None  # Largura ajustada para 80% da tela, altura definida como None
            halign: 'center'
            padding: [15, 0, 0, 0]
            height: dp(50)  # Altura fixa em densidade de pixels (dp)
            spacing: dp(10)  # Espaçamento entre as estrelas
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}  # Centralizado no centro da tela

            MDIconButton:
                id: number_one
                icon: 'star-outline'
                on_release: root.replace_star(1)
                theme_icon_color: 'Custom'
                icon_size: dp(30)  # Tamanho do ícone ajustado para melhor visibilidade

            MDIconButton:
                id: number_two
                icon: 'star-outline'
                on_release: root.replace_star(2)
                theme_icon_color: 'Custom'
                icon_size: dp(30)

            MDIconButton:
                id: number_three
                icon: 'star-outline'
                on_release: root.replace_star(3)
                theme_icon_color: 'Custom'
                icon_size: dp(30)

            MDIconButton:
                id: number_four
                icon: 'star-outline'
                on_release: root.replace_star(4)
                theme_icon_color: 'Custom'
                icon_size: dp(30)

            MDIconButton:
                id: number_five
                icon: 'star-outline'
                on_release: root.replace_star(5)
                theme_icon_color: 'Custom'
                icon_size: dp(30)

        MDCard:
            style: 'elevated'
            size_hint: 0.75, 0.07
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            theme_bg_color: 'Custom'
            md_bg_color: 'cyan'
            on_release: root.step_one()
            MDRelativeLayout:
                MDLabel:
                    text: 'Salvar'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    bold: True
