#: import get_color_from_hex kivy.utils.get_color_from_hex

<RequestSent>:
    name: 'RequestSent'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#06D6A0')
            pos_hint: {'center_x': 0.5, 'top': 1}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDLabel:
                    text: 'Solicitação enviada'
                    font_style: 'Headline'
                    height: '60dp'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    role: 'small'
                    bold: True
                    halign: 'center'
                    valign: 'center'
                    padding: [0, 10, 0, 0]
                    pos_hint: {'center_x': 0.55}

        AsyncImage:
            source: 'https://res.cloudinary.com/dsmgwupky/image/upload/v1739053352/image_1_hkgebk.png'
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}


        MDBoxLayout:
            theme_bg_color: 'Custom'
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDRelativeLayout:
                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    padding: [20, 0]
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    spacing: 10

                    MDLabel:
                        text: 'Sua solicitação foi enviada para análise. Você pode acompanhar o status de todas as suas solicitações na área de solicitações.'
                        font_style: 'Label'
                        theme_text_color: 'Custom'
                        text_color: 'grey'
                        role: 'large'
                        adaptive_height: True
                        pos_hint: {'center_x': 0.5}
                        halign: 'center'

        MDButton:
            style: 'tonal'
            theme_height: 'Custom'
            height: '40dp'
            theme_width: 'Custom'
            width: '280dp'
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#06D6A0')
            on_release: root._next_screen()
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}

            MDButtonText:
                text: 'Verificar solicitações'
                theme_text_color: 'Custom'
                text_color: 'white'
                bold: True
                font_style: 'Title'
                role: 'small'
                halign: 'center'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDNavigationBar:
            animation: True  # Desativa a animação
            theme_bg_color: 'Custom'
            md_bg_color: 'white'

            MDNavigationItem:
                id: payment
                active: root.current_nav_state == 'payment'
                on_release: root.perfil()

                MDNavigationItemIcon:
                    icon: 'cash-multiple'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'

            MDNavigationItem:
                id: vacancy
                active: root.current_nav_state == 'vacancy'
                on_release: root.vacancy()

                MDNavigationItemIcon:
                    icon: 'magnify'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'

            MDNavigationItem:
                id: notification
                active: root.current_nav_state == 'notification'
                on_release: root.req()

                MDNavigationItemIcon:
                    icon: 'email-outline'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'


            MDNavigationItem:
                id: perfil
                active: root.current_nav_state == 'perfil'
                on_release: root.perfil()

                MDNavigationItemIcon:
                    icon: 'account-outline'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'
