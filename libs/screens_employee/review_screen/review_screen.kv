#: import get_color_from_hex kivy.utils.get_color_from_hex

<ReviewScreen>:
    name: 'ReviewScreen'
    md_bg_color: 'white'

    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'  # Organiza os widgets em uma coluna
            size_hint_y: None
            height: self.minimum_height  # Ajusta a altura do layout para permitir rolagem
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#06D6A0')
            pos_hint: {'center_x': 0.5, 'top': 1}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDLabel:
                    text: 'Revisão de Pagamentos'
                    font_style: 'Headline'
                    height: '60dp'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    role: 'small'
                    bold: True
                    halign: 'center'
                    valign: 'center'
                    padding: [0, 10, 0, 0]
                    pos_hint: {'center_x': 0.55}

        MDBoxLayout:
            size_hint: 1, 0.06
            theme_bg_color: 'Custom'

            pos_hint: {'center_x': 0.5, 'center_y': 0.85}

            MDLabel:
                text: 'Visualize todos os seus pagamentos'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 'grey'

        MDBoxLayout:
            size_hint: 0.95, 0.1
            theme_bg_color: 'Custom'
            padding: [10,]
            spacing: 5
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}

            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                spacing: 10
                padding: [20, 0, 0, 0]

                MDLabel:
                    text: 'Total Recebido'
                    font_style: 'Body'
                    role: 'small'
                    theme_text_color: 'Custom'
                    text_color: 'grey'
                    halign: 'left'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDLabel:
                    id: received
                    text: 'R$ 12.450'
                    font_style: 'Title'
                    role: 'large'
                    theme_text_color: 'Custom'
                    text_color: [0.0, 1.0, 0.0, 1.0]
                    halign: 'left'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}


        MDScrollView:
            pos_hint: {'center_x': 0.5, 'center_y': 0.42}
            do_scroll_x: False
            size_hint: 0.85, 0.6
            theme_bg_color: 'Custom'

            MDBoxLayout:
                id: main_scroll
                spacing: 5
                adaptive_height: True
                orientation: "vertical"


        MDNavigationBar:
            animation: True  # Desativa a animação
            theme_bg_color: 'Custom'
            md_bg_color: 'white'

            MDNavigationItem:
                id: payment
                active: root.current_nav_state == 'payment'

                MDNavigationItemIcon:
                    icon: 'cash-multiple'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'

            MDNavigationItem:
                id: vacancy
                active: root.current_nav_state == 'vacancy'
                on_release: root.vacancy()

                MDNavigationItemIcon:
                    icon: 'magnify'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'

            MDNavigationItem:
                id: notification
                active: root.current_nav_state == 'notification'
                on_release: root.req2()

                MDNavigationItemIcon:
                    icon: 'email-outline'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'


            MDNavigationItem:
                id: perfil
                active: root.current_nav_state == 'perfil'
                on_release: root.perfil()

                MDNavigationItemIcon:
                    icon: 'account-outline'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'

