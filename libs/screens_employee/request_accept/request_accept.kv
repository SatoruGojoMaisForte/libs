<RequestAccept>:
    name: 'RequestAccept'
    md_bg_color: 1, 1, 1, 1

    MDFloatLayout:

        MDIconButton:
            icon: 'arrow-left'
            theme_font_size: 'Custom'
            font_size: '30dp'
            theme_icon_color: 'Custom'
            icon_color: 'black'
            pos_hint: {'center_x': 0.1, 'center_y': 0.95}
            on_release: root.back()

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.35
            padding: "10dp"
            spacing: "10dp"

            pos_hint: {'center_x': 0.5, 'center_y': 0.89}

            # Container da imagem - Fixo e centralizado
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.6
                padding: "10dp"

                MDBoxLayout:
                    size_hint: None, None
                    size: "130dp", "130dp"
                    pos_hint: {'center_x': 0.5}

                    AsyncImage:
                        id: perfil
                        source: root.avatar
                        allow_stretch: True
                        keep_ratio: True

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.1
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}
            spacing: 20

            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDIcon:
                    icon: 'account-hard-hat'
                    theme_icon_color: 'Custom'
                    icon_color: 0, 0, 1, 1
                    pos_hint: {'center_y': 0.6}

                MDLabel:
                    text: 'Informações do contratante'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True
                    pos_hint: {'center_y': 0.5}

        MDBoxLayout:
            size_hint: 1, 0.08
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.69}
            md_bg_color: 1, 1, 1, 1

            MDRelativeLayout:
                MDLabel:
                    text: root.username
                    font_style: 'Title'
                    role: 'large'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.68}

                MDLabel:
                    text: root.function
                    font_style: 'Title'
                    role: 'small'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.16
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.47}

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDIcon:
                    icon: 'cellphone'
                    theme_icon_color: 'Custom'
                    icon_color: 'grey'
                    pos_hint: {'center_y': 0.5}

                MDLabel:
                    text: root.telefone
                    pos_hint: {'center_y': 0.5}
                    theme_font_size: 'Custom'
                    font_size: '15sp'


            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDIcon:
                    icon: 'email'
                    theme_icon_color: 'Custom'
                    icon_color: 'grey'
                    pos_hint: {'center_y': 0.5}

                MDLabel:
                    text: root.email
                    pos_hint: {'center_y': 0.5}
                    theme_font_size: 'Custom'
                    font_size: '15sp'

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDIcon:
                    icon: 'map-marker-outline'
                    theme_icon_color: 'Custom'
                    icon_color: 'grey'
                    pos_hint: {'center_y': 0.5}

                MDLabel:
                    text: f"{root.state}, {root.city}"
                    pos_hint: {'center_y': 0.5}
                    theme_font_size: 'Custom'
                    font_size: '15sp'

        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}
            size_hint: 0.9, 0.08
            theme_bg_color: 'Custom'
            radius: [10,]
            spacing: dp(5)
            md_bg_color: 'white'
            padding: [15, 0, 15, 0]

            MDCard:
                style: 'elevated'
                size_hint: 0.45, 0.8
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                on_release: root.reject_candidate()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Dispensar'
                        bold: True
                        theme_text_color: 'Custom'
                        text_color: 'black'
                        halign: 'center'

            MDCard:
                style: 'elevated'
                size_hint: 0.45, 0.8
                theme_bg_color: 'Custom'
                md_bg_color: 0, 0, 1, 1
                on_release: root.hire_employee()

                MDRelativeLayout:
                    MDLabel:
                        text: 'Aceitar'
                        bold: True
                        theme_text_color: 'Custom'
                        text_color: 'white'
                        halign: 'center'


        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.1
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.32}
            spacing: 20

            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDIcon:
                    icon: 'account-hard-hat'
                    theme_icon_color: 'Custom'
                    icon_color: 0, 0, 1, 1
                    pos_hint: {'center_y': 0.6}

                MDLabel:
                    text: 'Função requerida'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True
                    pos_hint: {'center_y': 0.5}


            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 2, 10, 2]
                spacing: '5dp'

                MDRelativeLayout:

                    MDLabel:
                        text: root.required_function
                        font_style: 'Label'
                        role: 'large'
                        bold: True
                        theme_font_size: 'Custom'
                        font_size: '15sp'
                        halign: 'left'
                        pos_hint: {'center_y': 1}
