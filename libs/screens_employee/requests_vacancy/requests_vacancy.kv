#: import get_color_from_hex kivy.utils.get_color_from_hex
#: import Navigations libs.components.nav_table.Navigations

<RequestsVacancy>:
    name: 'RequestsVacancy'
    md_bg_color: 1, 1, 1, 1

    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: [10, 10, 0, 0]
            spacing: "50dp"
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#7692FF')
            pos_hint: {'center_x': 0.5, 'top': 1}

            BoxLayout:
                size_hint: 1, None
                height: '60dp'
                padding: [0, 0, 15, 0]

                MDLabel:
                    text: 'Solicitações'
                    font_style: 'Headline'
                    height: '60dp'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    role: 'small'
                    bold: True
                    halign: 'center'
                    valign: 'center'
                    padding: [0, 10, 0, 0]
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDNavigationBar:
            animation: True  # Desativa a animação
            theme_bg_color: 'Custom'
            md_bg_color: 'white'
            pos_hint: {'center_x': 0.5, 'top': 0.88}


            MDNavigationItem:
                id: request
                active: root.tab_nav_state == 'request'
                on_release: root.workflow('request')

                MDNavigationItemLabel:
                    text: 'Enviadas'
                    theme_text_color: 'Custom'
                    text_color_active: 'blue'


            MDNavigationItem:
                id: decline
                active: root.tab_nav_state == 'decline'
                on_release: root.workflow('decline')

                MDNavigationItemLabel:
                    text: 'Recusadas'
                    theme_text_color: 'Custom'
                    text_color_active: 'blue'

            MDNavigationItem:
                id: received
                active: root.tab_nav_state == 'received'
                on_release: root.workflow('received')

                MDNavigationItemLabel:
                    text: 'Recebidas'
                    theme_text_color: 'Custom'
                    text_color_active: 'blue'

        MDScrollView:
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            do_scroll_x: False
            size_hint: 0.85, 0.65
            theme_bg_color: 'Custom'

            MDBoxLayout:
                id: main_scroll
                spacing: 10
                padding: [5,]
                adaptive_height: True
                orientation: "vertical"


    MDNavigationBar:
        animation: True  # Desativa a animação
        theme_bg_color: 'Custom'
        md_bg_color: 'white'

        MDNavigationItem:
            id: payment
            active: root.current_nav_state == 'payment'
            on_release: root.req()

            MDNavigationItemIcon:
                icon: 'cash-multiple'
                theme_icon_color: 'Custom'
                icon_color_active: 'blue'

        MDNavigationItem:
            id: vacancy
            active: root.current_nav_state == 'vacancy'
            on_release: root.vacancy()

            MDNavigationItemIcon:
                icon: 'magnify'
                theme_icon_color: 'Custom'
                icon_color_active: 'blue'

        MDNavigationItem:
            id: notification
            active: root.current_nav_state == 'notification'


            MDNavigationItemIcon:
                icon: 'email-outline'
                theme_icon_color: 'Custom'
                icon_color_active: 'blue'


        MDNavigationItem:
            id: perfil
            active: root.current_nav_state == 'perfil'
            on_release: root.perfil()

            MDNavigationItemIcon:
                icon: 'account-outline'
                theme_icon_color: 'Custom'
                icon_color_active: 'blue'



