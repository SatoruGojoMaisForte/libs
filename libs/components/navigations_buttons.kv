<NavigationsButtons>:
    animation: False  # Desativa a animação
    theme_bg_color: 'Custom'
    md_bg_color: 'white'

    MDNavigationItem:
        id: table
        on_release: root.bricklayer()
        active: root.table

        MDNavigationItemIcon:
            icon: 'table'
            theme_icon_color: 'Custom'
            icon_color_active: 'blue'

    MDNavigationItem:

        MDNavigationItemIcon:
            icon: 'magnify'
            theme_icon_color: 'Custom'
            icon_color_active: 'blue'

    MDNavigationItem:
        id: perfil
        on_release: root.passo()
        active: not root.table

        MDNavigationItemIcon:
            icon: 'account-outline'
            theme_icon_color: 'Custom'
            icon_color_active: 'blue'

