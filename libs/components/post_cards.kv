<PostCards>:
    orientation: 'vertical'
    size_hint_y: None
    height: '420dp'
    elevation: 0
    theme_bg_color: 'Custom'
    text_color: 1, 1, 1, 1
    md_bg_color: 1, 1, 1, 1

    MDBoxLayout:
        padding: 2
        adaptive_height: True

        MDListItem:
            _no_ripple_effect: True
            theme_bg_color: 'Custom'
            text_color: 1, 1, 1, 1

            MDListItemHeadlineText:
                text: f'[b][size=14]{root.username}[/size][/b]'
                divider: None

            MDListItemLeadingAvatar:
                source: root.avatar
                radius: [20,]

        MDIconButton:
            icon: 'dots-vertical'
            theme_bg_color: 'Custom'
            text_color: 1, 1, 1, 1
            theme_icon_color: 'Custom'
            icon_color: 'black'

    FitImage:
        adaptive_height: True
        source: root.post

    MDBoxLayout:
        padding: 5, 0, 0, 0
        spacing: 2
        adaptive_height: True

        MDIconButton:
            icon: 'heart-outline'
            theme_icon_color: 'Custom'
            icon_color: 'black'

        MDCard:
            size_hint: None, None
            size: 50, 50
            elevation: 0
            theme_bg_color: 'Custom'
            text_color: 1, 1, 1, 1
            md_bg_color: 1, 1, 1, 1

            MDRelativeLayout:
                FitImage:
                    source: "https://res.cloudinary.com/dsmgwupky/image/upload/v1728704625/comentario2_pwm2bt.png"
                    size_hint: None, None
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                    size: 25, 25


        MDIconButton:
            icon: 'send-outline'
            theme_icon_color: 'Custom'
            icon_color: 'black'

        Widget:

        MDIconButton:
            icon: 'bookmark-outline'
            theme_icon_color: 'Custom'
            icon_color: 'black'

    MDBoxLayout:
        orientation: 'vertical'
        padding: 5, 0, 0, 0
        spacing: 2
        adaptive_height: True

        MyLabel:
            text: f'{root.likes} Likes'
            bold: True

        MyLabel:
            markup: True
            text: f'[b]{root.username}[/b] {root.caption}'


<HalfOpacityLabel@MDLabel>:
    theme_text_color: 'Custom'
    text_color: 0, 0, 0, 0.5

<MyLabel@MDLabel>:
    adaptive_height: True
    theme_font_size: 'Custom'
    font_size: 12

























